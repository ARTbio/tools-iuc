<?xml version="1.0"?>
<macros>
    <token name="@FQQUAL@">
        <![CDATA[
            #if $input.ext == "fastqsanger":
                -Q 33
            #else:
                -Q 64
            #end if
        ]]>
    </token>
    <xml name="requirements">
        <requirements>
            <requirement type="package" version="0.0.14">fastx_toolkit</requirement>
            <yield />
        </requirements>
    </xml>
    <xml name="citations">
        <citations>
            <citation type="bibtex">
                @UNPUBLISHED{agordon,
                    author = "Assaf Gordon",
                    title = "FASTQ/A short-reads pre-processing tools",
                    year = "2010",
                    note = "http://hannonlab.cshl.edu/fastx_toolkit/",
                    url = "http://hannonlab.cshl.edu/fastx_toolkit/"}
            </citation>
        </citations>
    </xml>
    <xml name="fasta_input">
        <param format="fasta,fasta.gz" name="input" type="data" label="Input FASTA file" />
    </xml>
    <xml name="fastq_input">
        <param format="fastqsanger,fastqsanger.gz,fastqsolexa,fastqsolexa.gz,fastqillumina,fastqillumina.gz" name="input" type="data" label="Input FASTQ file" />
    </xml>
    <xml name="fastx_input">
        <param format="fasta,fasta.gz,fastqsanger,fastqsanger.gz,fastqsolexa,fastqsolexa.gz,fastqillumina,fastqillumina.gz" name="input" type="data" label="Input file in FASTA or FASTQ format" />
    </xml>
</macros>