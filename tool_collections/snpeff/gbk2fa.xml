<tool id="gbk2fa" name="Convert Genbank to FASTA" version="0.1.0">
    <requirements>
        <requirement type="package" version="3.6.4">python</requirement>
        <requirement type="package" version="1.70">biopython</requirement>
        <requirement type="package" version="0.4.15">python-magic</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        python3 '$__tool_directory__/gbk2fa.py' '${input1}' '${output1}'
    ]]></command>
    <inputs>
        <param type="data" name="input1" format="genbank" label="Genbank dataset" help="Genbank dataset to be converted to FASTA. This dataset can be gzipped" />
        <param type="boolean" name="remove_version" truevalue="--remove_version" falsevalue="" label="Remove sequence version label?" help="Genbank sequences have vesion numbers such as B000564.2. This option removes them leaving only B0000564 (see help for more info)"/>
    </inputs>
    <outputs>
        <data name="output1" format="fasta" from_work_dir="output.fna" />
    </outputs>
    <tests>
        <test>
            <param name="input1" value="input.gbk"/>
            <output name="output1" file="output.fna"/>
        </test>
    </tests>
    <help><![CDATA[
        /bin/sh: 1: gbk2fa.py: not found

    ]]></help>
</tool>