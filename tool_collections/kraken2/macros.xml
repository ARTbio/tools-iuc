<?xml version="1.0"?>
<macros>
    <token name="@WRAPPER_VERSION@">2.0.7_beta</token>
    <token name="@INTYPES@">
        fasta,fastq,gz,bz2,fastqsanger
    </token>
    <xml name="input_database">
        <param label="Select a Kraken2 database" name="kraken2_database" type="select">
            <options from_data_table="kraken2_databases">
                <validator message="No Kraken2 database is available" type="no_options" />
            </options>
        </param>
    </xml>
    <xml name="citations">
        <citations>
            <citation type="doi">10.1186/gb-2014-15-3-r46</citation>
        </citations>
    </xml>
    <token name="@SET_DATABASE_PATH@">export KRAKEN_DEFAULT_DB='${kraken2_database.fields.path}'</token>
    <token name="@INPUT_DATABASE@">--db "\$KRAKEN_DEFAULT_DB"</token>
</macros>
