            <param name="suppress_taxonomy_assignment" value="--suppress_taxonomy_assignment"/>
            <param name="suppress_align_and_tree" value=""/>
            <output name="final_otu_map" value="pick_closed_reference_otus/3_final_otu_map.txt"/>
