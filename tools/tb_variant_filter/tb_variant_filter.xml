<tool id="tb_variant_filter" name="TB Variant Filter" version="@TOOL_VERSION@+galaxy0" profile="16.04">
    <description>M. tuberculosis H37Rv VCF filter</description>
    <macros>
        <token name="@TOOL_VERSION@">0.1.3</token>
    </macros>
    <requirements>
        <requirement type="package" version="@TOOL_VERSION@">tb_variant_filter</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        tb_variant_filter
        #if str($region_filter_cond.enable_region_filter) == "true":
            --region_filter $region_filter_cond.region_filter
        #end if
        #if str($close_to_indel_filter.enable_close_to_indel_filter) == "true":
            --close_to_indel_filter --indel_window_size $close_to_indel_filter.indel_window_size   
        #end if
        #if str($min_percentage_alt_filter.enable_min_percentage_alt_filter) == "true":
            --min_percentage_alt_filter --min_percentage_alt $min_percentage_alt_filter.min_percentage_alt
        #end if
        #if str($min_depth_filter.enable_min_depth_filter) == "true":
            --min_depth_filter --min_depth $min_depth_filter.min_depth
        #end if
        $snv_only_filter
        '$input1' '$output1'
    ]]></command>
    <inputs>
        <param type="data" name="input1" label="VCF file to be filter"  format="vcf"/>

        <conditional name="region_filter_cond">
            <param type="select"  name="enable_region_filter" label="Filter out variants in designated regions">
                <option value="true" selected="true">Yes</option>
                <option value="false">No</option>
            </param>
            <when value="true">
                <param argument="--region_filter" type="select" multiple="true" label="Region filters to enable">
                    <option value="pe_ppe" selected="true">PE/PPE</option>
                    <option value="tbprofiler">TBProfiler antibiotic resistant genes</option>
                    <option value="mtbseq">MTBseq antibiotic resistant genes</option>
                    <option value="uvp" selected="true">UVP repeat / insertion sequence sites</option>
                </param>
            </when>
            <when value="false">
            </when>
        </conditional>
    
        <conditional name="close_to_indel_filter">
            <param type="select" name="enable_close_to_indel_filter" label="Filter variants close to indels">
                <option value="true">Yes</option>
                <option value="false" selected="true">No</option>
            </param>
            <when value="true">
                <param argument="--indel_window_size" type="integer" value="5" label="Window to mask around indels"/>
            </when>
            <when value="false">
            </when>
        </conditional> 

        <conditional name="min_percentage_alt_filter">
            <param type="select"  name="enable_min_percentage_alt_filter" label="Filter variants by percentage alt allele">
                <option value="true" selected="true">Yes</option>
                <option value="false">No</option>
            </param> 
            <when value="true">
                <param argument="--min_percentage_alt" type="float" value="90"
                    label="Minimum alternate allele percentage to accept"/>
            </when>
            <when value="false">
            </when>
        </conditional>

        <conditional name="min_depth_filter">
            <param type="select" name="enable_min_depth_filter" label="Filter sites by read alignment depth">
                <option value="true" selected="true">Yes</option>
                <option value="false">No</option>
            </param>
            <when value="true">
                <param argument="--min_depth" type="integer" value="30" label="Minimum read depth (coverage)"/>
            </when>
            <when value="false">
            </when>
        </conditional>

        <param argument="--snv_only_filter" type="boolean" truevalue="--snv_only_filter"
               falsevalue="" label="Enable SNV-only filter"/>
    </inputs>
    <outputs>
        <data name="output1" format="vcf"/>
    </outputs>
    <tests>
        <test>
            <param name="input1" value="test_input1.vcf" ftype="vcf" />
            <conditional name="region_filter_cond">
                <param name="enable_region_filter" value="true" />
                <param name="region_filter" value="pe_ppe,tbprofiler,uvp" />
            </conditional>
            <conditional name="close_to_indel_filter">
                <param name="enable_close_to_indel_filter" value="false" />
            </conditional>
            <conditional name="min_percentage_alt_filter">
                <param name="enable_min_percentage_alt_filter" value="false" />
            </conditional>
            <conditional name="min_depth_filter">
                <param name="enable_min_depth_filter" value="false" />
            </conditional>
            <param name="snv_only_filter" value="false" />
            <output name="output1" file="test_output1.vcf" ftype="vcf" />
        </test>
        <test>
            <param name="input1" value="test_input1.vcf" ftype="vcf" />
            <conditional name="region_filter_cond">
                <param name="enable_region_filter" value="false" />
            </conditional>
            <conditional name="close_to_indel_filter">
                <param name="enable_close_to_indel_filter" value="true" />
                <param name="indel_window_size" value="5" />
            </conditional>
            <conditional name="min_percentage_alt_filter">
                <param name="enable_min_percentage_alt_filter" value="false" />
            </conditional>
            <conditional name="min_depth_filter">
                <param name="enable_min_depth_filter" value="false" />
            </conditional>
            <param name="snv_only_filter" value="false" />
            <output name="output1" file="test_output2.vcf" ftype="vcf" />
        </test>
        <test>
            <param name="input1" value="test_input1.vcf" ftype="vcf" />
            <conditional name="region_filter_cond">
                <param name="enable_region_filter" value="false" />
            </conditional>
            <conditional name="close_to_indel_filter">
                <param name="enable_close_to_indel_filter" value="false" />
            </conditional>
            <conditional name="min_percentage_alt_filter">
                <param name="enable_min_percentage_alt_filter" value="true" />
                <param name="min_percentage_alt" value="95.0" />
            </conditional>
            <conditional name="min_depth_filter">
                <param name="enable_min_depth_filter" value="false" />
            </conditional>
