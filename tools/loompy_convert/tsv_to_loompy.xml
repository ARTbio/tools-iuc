<tool id="tsv_to_loompy" name="tsv to loompy converter" version="0.1.0">
    <requirements>
      <requirement type="package" version="1.9.3">numpy</requirement>
      <requirement type="package" version="2.0.16">loompy</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
python /Users/alexanderostrovsky/Desktop/galaxy/tools/myTools/tsv_to_loompy.py -f '${data}'
    #if $rownames == "true":
        -r
    #end if
    #if $colnames == "true":
        -c
    #end if
    #if $row_attr:
        --row_attr '${row_attr}'
    #end if
    #if $col_attr:
        --col_attr '${col_attr}'
    #end if
    -o '${loompyloom}'
    ]]></command>
    <inputs>
      <param name="data" type="data" format="tsv" label="Input tsv file" help="Tsv file with or without row/column names"/>
      <param name="rownames" type="boolean" label="Row names present" truevalue="true" falsevalue="false" selected="true"/>
      <param name="colnames" type="boolean" label="Column names present" truevalue="true" falsevalue="false" selected="true"/>
      <param name="row_attr" type="text" label="Rows represent: (If unspecified, default is 'Genes')" optional="true"/>
      <param name="col_attr" type="text" label="Columns represent: (If unspecifed, default is 'Cells')" optional="true"/>
    </inputs>
    <outputs>
      <data format="loom" name="loompyloom" label="Loompy converted file"/>
    </outputs>
    <help><![CDATA[
Converts tsv file to a loompy file
    ]]></help>
</tool>
