<macros>
  <xml name="requirements">
    <requirements>
      <requirement type="package" version="1.0.1">ivar</requirement>
      <requirement type="package" version="1.9">samtools</requirement>
      <!-- <requirement type="package" version="2.29.2">bedtools</requirement> -->
      <yield />
    </requirements>
  </xml>
  <xml name="version_command">
    <version_command>ivar version | grep version</version_command>
  </xml>
  <xml name="stdio">
    <stdio>
      <exit_code range="1:" />
      <exit_code range=":-1" />
      <regex match="Error:" />
      <regex match="Exception:" />
      <regex match="\[bns_restore_core\] Parse error reading" />
    </stdio>
  </xml>
  <xml name="citations">
    <citations>
      <citation type="doi">10.1186/s13059-018-1618-7</citation>
    </citations>
  </xml>
</macros>
