<?xml version="1.0"?>
<tool name="IDR Download" id="idr_download_by_ids" version="@VERSION@">
    <description>- download images from the Image Data Resource using image IDs. </description>
    <macros>
        <token name="@VERSION@">5.6.0</token>
    </macros>
    <requirements>
        <requirement type="package" version="@VERSION@">python-omero</requirement>
        <requirement type="package" version="3.1.3">matplotlib</requirement>
    </requirements>
    <command><![CDATA[
        #if str($id_source.source) == 'link':
            python -c 'print("${id_source.image_id_link}".split("?show=")[-1].replace("|", "\n"))'
            ## https://idr.openmicroscopy.org/webclient/?show=image-3426274|image-3426275|image-3426276|image-3426277
        #else:
            cat ${id_source.image_id_data}
        #end if
        | python '$__tool_directory__/idr_download_by_ids.py' 
            -c $channel 
            -f $frame
            -z $z_section
            --center $x_coord $y_coord $width $height
            &> $out_log

    ]]></command>
<inputs>
        <conditional name="id_source">
            <param name="source" type="select" label="How do you want to provide the image ids?">
                <option value="link">As a IDR link</option>
                <option value="data">Read image IDs from dataset</option>
            </param>
            <when value="link">
                <param name="image_id_link" type="text"
                label="Paste your IDR hyperlink">
                    <sanitizer>
                        <valid><add value="|" /></valid>
                    </sanitizer>
                </param>
            </when>
            <when value="data">
                <param name="image_id_data" type="data" format="txt"
                label="Select a dataset with image ids (one per line)" />
            </when>
        </conditional>
        <param name="channel" type="text" label="Enter Channel name" />
        <param name="z_section" type="integer" value="0" min="0"
        label="Enter selected z" />
        <param name="frame" type="integer" value="0" min="0"
        label="Frame to download" />
        <param format="data" name="region" type="text" label="Enter region to select (comma separated)" />
        <param name="x_coord" type="integer" value="0" min="0"
        label="x-coordinate" />
        <param name="y_coord" type="integer" value="0" min="0"
        label="y-coordinate" />
        <param name="height" type="integer" value="1" min="1"
        label="Height" />
        <param name="width" type="integer" value="1" min="1"
        label="Width" />
    </inputs>
    <outputs>
        <data name="out_log" format="txt" />
        <collection name="output_file" type="list">
            <discover_datasets pattern="__name_and_ext__" format="tiff"/> 
        </collection>
    </outputs>
    <tests>
        <test>
            <param name="source" value="data" />
            <param name="image_id_data" value="ids.txt"/>
            <param name="channel" value="1"/>
            <param name="x_coord" value="3" />
            <param name="y_coord" value="3" />
            <param name="width" value="5" />
            <param name="height" value="5" />
            <param name="frame" value="2" />
            <output_collection name="output_file" type="list">
                <element name="Centrin_PCNT_Cep215_20110506_Fri-1545_0_SIR_PRJ_18848073_3_5_5" file="test1.tiff"/>
            </output_collection>
        </test>
    </tests>
    <help>
This tool allows you to import data from IDR.

-----

.. class:: infomark

**Input**

Enter the IDs of the images or a URL.

... expand ...

-----

.. class:: infomark

**Output**

Downloaded images.

... expand ...

    </help>
    <citations>
        <citation type="doi">10.1038/nmeth.4326</citation>
    </citations>
</tool>

