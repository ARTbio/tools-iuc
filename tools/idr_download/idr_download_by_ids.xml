<?xml version="1.0"?>
<tool name="IDR Download" id="idr_download_by_ids" version="0.0.1">
    <description>images from IDR using image IDs. </description>
    <requirements>
        <requirement type="package" version="5.6.0">python-omero</requirement>
        <requirement type="package" version="3.1.3">matplotlib</requirement>
    </requirements>
    <command><![CDATA[
        #if str($id_source.source) == 'link':
            python -c 'print("${id_source.image_id_link}".split("?show=")[-1].replace("|", "\n"))'
            ## https://idr.openmicroscopy.org/webclient/?show=image-3426274|image-3426275|image-3426276|image-3426277
        #else:
            cat ${id_source.image_id_data}
        #end if
        | python '$__tool_directory__/idr_download_by_ids.py' -c 0 -f 0 -z 0 --rectangle 0 0 10 20 &> $out_log
    ]]></command>
<inputs>
        <conditional name="id_source">
            <param name="source" type="select" label="How do you want to provide the image ids?">
                <option value="link">As a IDR link</option>
                <option value="data">Read image ids from dataset</option>
            </param>
            <when value="link">
                <param name="image_id_link" type="text"
                label="Paste your IDR hyperlink">
                    <sanitizer>
                        <valid><add value="|" /></valid>
                    </sanitizer>
                </param>
            </when>
            <when value="data">
                <param name="image_id_data" type="data" format="txt"
                label="Select a dataset with image ids (one per line)" />
            </when>
        </conditional>
        <param name="channel" type="text" label="Enter Channel name" />
        <param name="z_section" type="integer" value="0" min="0"
        label="Enter selected z" />
        <param name="frame" type="integer" value="0" min="0"
        label="Frame to download" />
        <param format="data" name="region" type="text" label="Enter Region to select (comma separated)" />
    </inputs>
    <outputs>
        <data name="out_log" format="txt" />
        <collection name="output_file" type="list">
            <discover_datasets pattern="__name_and_ext__" format="tiff"/> 
        </collection>    
    </outputs>
    <help>
This tool allows you to import data from IDR.
Enter the images ID
    </help>
</tool>
