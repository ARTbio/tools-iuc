<tool id="bctools_remove_tail" name="Remove 3'-end nts" version="1.0.0">
    <description>from FASTQ</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <command detect_errors="exit_code"><![CDATA[
        remove_tail.py
        '$reads_fastq'
        '$length'
        > '$default'
    ]]></command>
    <inputs>
        <param label="FASTQ file" name="reads_fastq" type="data" format="fastq"/>
        <param label="Remove this many nucleotides" name="length" type="integer" value="0"/>
    </inputs>
    <outputs>
        <data format="fastq" name="default"/>
    </outputs>
    <tests>
        <test>
            <param name="reads_fastq" value="readswithtail.fastq"/>
            <param name="length" value="7"/>
            <output name="default" file="readswithtailremoved.fastq"/>
        </test>
    </tests>
    <help><![CDATA[

bctools - Remove 3'-end nts from FASTQ
======================================

Remove a certain number of nucleotides from the 3'-tails of sequences in FASTQ format.

    ]]></help>
    <expand macro="citations"/>
</tool>
