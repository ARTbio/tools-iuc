<?xml version="1.0"?>
<tool id="medaka_fastrle" name="medaka: fastrle" version="@TOOL_VERSION@+@WRAPPER_VERSION@" profile="@PROFILE@">
    <description>creates run-length encoded FASTQ</description>    
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <expand macro="version_command"/>
    <command detect_errors="exit_code"><![CDATA[
        medaka fastrle
        ## optional
        --debug
        --block_size $ap.block_size
        ## required
        '$input'
        |& tee result.fastq
        ]]></command>
    <inputs>
        <param argument="input" type="data" format="fasta, fastq" label="Select input file"/>
        <section name="op" title="Optional parameters" expanded="true">
            <param argument="--block_size" type="integer" value="94" label="Set block size for hompolymer splitting" help="e.g. with a value of blocksize=3, AAAA -> A3 A1."/>
        </section>
    </inputs>
    <outputs>
        <data name="out_result" format="fastq" from_work_dir="result.fastq" label="${tool.name} on ${on_string}: Result"/>
    </outputs>
    <tests>
        <!-- #1 default -->
        <test expect_num_outputs="1">
            <param name="input" value="reference.fasta"/>
            <output name="out_result">
                <assert_contents>
                    <has_n_lines n="4"/>
                    <has_line line="@contig1"/>
                </assert_contents>
            </output>            
        </test>
        <!-- #2 -->
        <test expect_num_outputs="1">
            <param name="input" value=""/>
            <section name="op">
                <param name="block_size" value="90"/>
            </section>
            <output name="out_result">
                <assert_contents>
                    <has_n_lines n="4"/>
                    <has_line line="@contig1"/>
                </assert_contents>
            </output>            
        </test>                                                    
    </tests>
    <help><![CDATA[
.. class:: infomark

**What it does**

@WID@

This module creates run-length encoded FASTQ files (lengths in quality track).

**References**

@REFERENCES@
    ]]></help>
    <expand macro="citations"/>
</tool>