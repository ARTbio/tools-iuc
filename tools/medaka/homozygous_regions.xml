<?xml version="1.0"?>
<tool id="medaka_tool-homozygous-regions" name="medaka: Homozygous regions" version="@TOOL_VERSION@+@WRAPPER_VERSION@" profile="@PROFILE@">
    <description>from a diploid vcf</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <expand macro="version_command"/>
    <command detect_errors="exit_code"><![CDATA[
        medaka tools homozygous_regions
        ## optional
        --debug
        --min_len $ap.min_len
        ## required
        '$vcf'
        '$region'
        |& tee result.txt
        ]]></command>
    <inputs>
        <expand macro="vcf"/>
        <param argument="region" type="txt" value="" optional="true" label="Set genomic region" help="Within which to find homozygous sub-regions."/>
        <section name="ap" title="Advanced parameters">
            <param argument="--min_len" type="integer" value="1000" label="Set minimum region length." help="e.g.  chr1:14000:17500"/>
        </section>
    </inputs>
    <outputs>
        <data name="out_result" format="tabular" from_work_dir="regions.txt" label="${tool.name} on ${on_string}: Result"/>
    </outputs>
    <tests>
        <!-- #1 default -->
        <test expect_num_outputs="1">
            <param name="vcf" value="sample.vcf"/>
            <param name="region" value="chr1:14000:17500"/>
            <output name="out_result">
                <assert_contents>
                    <has_n_lines n="2"/>
                    <has_text_matching expression=".+homozygous regions.+"/>
                </assert_contents>
            </output>
        </test>
        <!-- #2 -->
        <test expect_num_outputs="1">
            <param name="vcf" value="sample.vcf"/>
            <param name="region" value="chr1:14000:17500"/>
            <section name="ap">
                <param name="min_len" value="10001"/>
            </section>
            <output name="out_result">
                <assert_contents>
                    <has_n_lines n="2"/>
                    <has_text_matching expression=".+homozygous regions.+"/>
                </assert_contents>
            </output>
        </test>
    </tests>
    <help><![CDATA[
.. class:: infomark

**What it does**

@WID@

this module finds homozygous regions from a diploid VCF.

.. class:: infomark

**References**

@REFERENCES@
    ]]></help>
    <expand macro="citations"/>
</tool>