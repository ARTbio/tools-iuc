<?xml version="1.0"?>
<tool id="medaka_tool-vcf2tsv" name="medaka: VCF to TSV" version="@TOOL_VERSION@+@WRAPPER_VERSION@" profile="@PROFILE@">
    <description>converter</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <expand macro="version_command"/>
    <command detect_errors="exit_code"><![CDATA[
        ## initialize
        ln -s '$vcf' 'sample.vcf' &&

        ## run
        medaka tools vcf2tsv
        ## optional
        --debug
        ## required
        'sample.vcf'
        ]]></command>
    <inputs>
        <expand macro="vcf"/>
    </inputs>
    <outputs>
        <data name="out_result" format="tabular" from_work_dir="log.txt" label="${tool.name} on ${on_string}: Result"/>
    </outputs>
    <tests>
        <!-- #1 default -->
        <test expect_num_outputs="1">
            <param name="vcf" value="sample.vcf"/>
            <output name="out_result">
                <assert_contents>
                    <has_n_lines n="201"/>
                    <has_text_matching expression="alt&#009;chrom&#009;pos&#009;qual&#009;ident&#009;filt&#009;ref&#009;GT"/>
                    <has_text_matching expression="A&#009;contig1&#009;.+"/>
                </assert_contents>
            </output>
        </test>
    </tests>
    <help><![CDATA[
.. class:: infomark

**What it does**

@WID@

Tis module converts VCF to tabular files.

.. class:: infomark

**References**

@REFERENCES@
    ]]></help>
    <expand macro="citations"/>
</tool>