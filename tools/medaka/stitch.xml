<?xml version="1.0"?>
<tool id="medaka_stitch" name="medaka: stitch" version="@TOOL_VERSION@+@WRAPPER_VERSION@" profile="@PROFILE@">
    <description>...</description>    
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <expand macro="version_command"/>
    <command detect_errors="exit_code"><![CDATA[#
        medaka stitch
        ## optional
        --debug
        --jobs \${GALAXY_SLOTS:-4}
        @REGIONS@
        ## required
        '$inputs'
        'result.fasta'
        |& tee log.txt              
        ]]></command>
    <inputs>
        <param argument="inputs" type="data" format="hdf" multiple="true" label="Select input file(s)"/>

        <section name="ap" title="Advanced parameters">
            <expand macro="regions"/>
            <param name="out" type="select" multiple="true" optional="false" label="Select output file(s)" help="">
                <option value="result" selected="true">Result</option>
                <option value="log">Log</option>
            </param>
        </section>
    </inputs>
    <outputs>
        <data name="out_results" format="tabular" from_work_dir="results.fasta" label="${tool.name} on ${on_string}: Result">
            <filter>'results' in ap['out']</filter>
        </data>
        <data name="out_log" format="tabular" from_work_dir="log.txt" label="${tool.name} on ${on_string}: Log">
            <filter>'log' in ap['out']</filter>
        </data>
    </outputs>
    <tests>
        <!-- #1 default -->
        <test expect_num_outputs="1">
            <param name="inputs" value=""/>           
            <output name="out_results">
                <assert_contents>
                    <has_n_lines n=""/>
                    <has_line line=""/>
                    <has_text_matching expression=""/>
                    <has_size value="" delta=""/>
                </assert_contents>
            </output>            
        </test>   
        <!-- #1 default -->
        <test expect_num_outputs="2">
            <param name="inputs" value=""/>     
            <section name="ap">
                <param name="regions" value=""/>
            </section>
            <output name="out_log">
                <assert_contents>
                    <has_n_lines n=""/>
                    <has_line line=""/>
                    <has_text_matching expression=""/>
                    <has_size value="" delta=""/>
                </assert_contents>
            </output>            
        </test>                                                           
    </tests>
    <help><![CDATA[
.. class:: infomark

**What it does**

@WID@

...

**Input**

...

::

    Courier new text

**Output**

...

.. class:: infomark

**References**

@REFERENCES@
    ]]></help>
    <expand macro="citations"/>
</tool>
