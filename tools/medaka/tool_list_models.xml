<?xml version="1.0"?>
<tool id="medaka_tool-list-models" name="medaka: List models" version="@TOOL_VERSION@+@WRAPPER_VERSION@" profile="@PROFILE@">
    <description>that are available</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <expand macro="version_command"/>
    <command detect_errors="exit_code"><![CDATA[
        medaka tools list_models
        ## optional
        --debug
        @MODEL@
        $op.disable_cudnn
        ## required        
        |& tee result.txt
        ]]></command>
    <inputs>
        <section name="op" title="Optional parameters" expanded="true">
            <expand macro="model"/>
            <expand macro="disable_cudnn"/>
        </section>
    </inputs>
    <outputs>
        <data name="out_result" format="txt" from_work_dir="result.txt" label="${tool.name} on ${on_string}: Result"/>
    </outputs>
    <tests>
        <!-- #1 default -->
        <test expect_num_outputs="1">
            <output name="out_result">
                <assert_contents>
                    <has_n_lines n="4"/>
                    <has_text_matching expression="Available.+"/>
                </assert_contents>
            </output>
        </test>
        <!-- #2 -->
        <test expect_num_outputs="1">
            <section name="ap">
                <param name="model" value="r103_min_high_g360"/>
                <param name="disable_cudnn" value="true"/>
            </section>
            <output name="out_result">
                <assert_contents>
                    <has_n_lines n="4"/>
                    <has_text_matching expression="Available.+"/>
                </assert_contents>
            </output>
        </test>
    </tests>
    <help><![CDATA[
.. class:: infomark

**What it does**

@WID@

This module lists all available models.

.. class:: infomark

**References**

@REFERENCES@
    ]]></help>
    <expand macro="citations"/>
</tool>