<?xml version="1.0"?>
<tool id="medaka_tool-get-alignment-params" name="medaka: Get alignment parameters" version="@TOOL_VERSION@+@WRAPPER_VERSION@" profile="@PROFILE@">
    <description>appropriate for a model</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <expand macro="version_command"/>
    <command detect_errors="exit_code"><![CDATA[
        medaka tools get_alignment_params
        ## optional
        $ap.disable_cudnn
        @MODEL@
        ## required
        |& tee result.txt
        ]]></command>
    <inputs>
        <section name="ap" title="Advanced parameters" expanded="true">
            <expand macro="model"/>
            <expand macro="disable_cudnn"/>
        </section>
    </inputs>
    <outputs>
        <data name="out_result" format="txt" from_work_dir="result.txt" label="${tool.name} on ${on_string}: Result"/>
    </outputs>
    <tests>
        <!-- #1 default -->
        <test expect_num_outputs="1">
            <output name="out_result">
                <assert_contents>
                    <has_text_matching expression=".+"/>
                </assert_contents>
            </output>
        </test>
        <!-- #2 -->
        <test expect_num_outputs="2">
            <section name="ap">
                <param name="model" value=""/>
                <param name="disable_cudnn" value="true"/>
            </section>
            <output name="out_result">
                <assert_contents>
                    <has_text_matching expression=".+"/>
                </assert_contents>
            </output>
        </test>
    </tests>
    <help><![CDATA[
.. class:: infomark

**What it does**

@WID@

This module gives alignment parameters that are appropriate for a model.

.. class:: infomark

**References**

@REFERENCES@
    ]]></help>
    <expand macro="citations"/>
</tool>