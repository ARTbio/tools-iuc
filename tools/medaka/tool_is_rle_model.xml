<?xml version="1.0"?>
<tool id="medaka_tool-is-rlemodel" name="medaka: Check" version="@TOOL_VERSION@+@WRAPPER_VERSION@" profile="@PROFILE@">
    <description>RLE model status</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <expand macro="version_command"/>
    <command detect_errors="exit_code"><![CDATA[
        medaka tools is_rle_model
        ## optional
        $op.disable_cudnn
        @MODEL@
        ## required  
        |& tee result.txt
        ]]></command>
    <inputs>
        <section name="op" title="Optional parameters" expanded="true">
            <expand macro="model"/>
            <expand macro="disable_cudnn"/>
        </section>
    </inputs>
    <outputs>
        <data name="out_result" format="txt" from_work_dir="log.txt" label="${tool.name} on ${on_string}: Result"/>
    </outputs>
    <tests>
        <!-- #1 default -->
        <test expect_num_outputs="1">
            <output name="out_result">
                <assert_contents>
                    <has_text_matching expression=".+"/>
                </assert_contents>
            </output>
        </test>
        <!-- #2 -->
        <test expect_num_outputs="1">
            <section name="op">
                <param name="model" value="r941_min_high_g351"/>
                <param name="disable_cudnn" value="true"/>
            </section>
            <output name="out_result">
                <assert_contents>
                    <has_text_matching expression=".+"/>
                </assert_contents>
            </output>
        </test>
    </tests>
    <help><![CDATA[
.. class:: infomark

**What it does**

@WID@

This module checks if a model is an RLE model.

.. class:: infomark

**References**

@REFERENCES@
    ]]></help>
    <expand macro="citations"/>
</tool>