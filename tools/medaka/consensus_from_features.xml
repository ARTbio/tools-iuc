<?xml version="1.0"?>
<tool id="medaka_consensus-from-features" name="medaka: Consensus from features" version="@TOOL_VERSION@+@WRAPPER_VERSION@" profile="@PROFILE@">
    <description>to run inference from a trained model on existing features</description>    
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <expand macro="version_command"/>
    <command detect_errors="exit_code"><![CDATA[
        medaka consensus_from_features
        ## optional
        --debug
        @MODEL
        ## required
        '$features'
        |& tee log.txt                                      
        ]]></command>
    <inputs>
        <param argument="features" type="data" format="tabular" label="Select pregenerated features"/>

        <section name="op" title="Optional parameters" expanded="true">
            <expand macro="model"/>
            <param name="out" type="select" multiple="true" optional="false" label="Select output file(s)" help="">
                <option value="result" selected="true">Result</option>
                <option value="log">Log</option>
            </param>
        </section>
    </inputs>
    <outputs>
        <data name="out_log" format="tabular" from_work_dir="log.txt" label="${tool.name} on ${on_string}: Log">
            <filter>'log' in ap['out']</filter>
        </data>
    </outputs>
    <tests>
        <!-- #1 default -->
        <test expect_num_outputs="1">
            <param name="features" value=""/>           
            <output name="out_log">
                <assert_contents>
                    <has_n_lines n=""/>
                    <has_line line=""/>
                    <has_text_matching expression=""/>
                    <has_size value="" delta=""/>
                </assert_contents>
            </output>            
        </test>  
        <!-- #2 -->
        <!-- #1 default -->
        <test expect_num_outputs="1">
            <param name="features" value=""/>
            <param name="model" value=""/>
            <param name="out" value=""/>
            <output name="out_log">
                <assert_contents>
                    <has_n_lines n=""/>
                    <has_line line=""/>
                    <has_text_matching expression=""/>
                    <has_size value="" delta=""/>
                </assert_contents>
            </output>            
        </test> 

    </tests>
    <help><![CDATA[
.. class:: infomark

**What it does**

@WID@

This module runs inference from a trained model on existing features.

**References**

@REFERENCES@
    ]]></help>
    <expand macro="citations"/>
</tool>