<?xml version="1.0"?>
<tool id="medaka_smolecule" name="medaka: smolecule" version="@TOOL_VERSION@+@WRAPPER_VERSION@" profile="@PROFILE@">
    <description>to create consensus sequences from repetitive reads</description>    
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <expand macro="version_command"/>
    <command detect_errors="exit_code"><![CDATA[        
        medaka smolceule
        ## optional
        --debug
        --threads_io \${GALAXY_SLOTS:-4}
        batch_size batch_size
        --regions $ap.regions
        --chunk_len $ap.chunk_len
        --chunk_ovlp $ap.chunk_ovlp
        --model $ap.model
        --disable_cudnn $ap.disable_cudnn
        --depth $ap.depth
        --length $ap.length
        --check_output $ap.check_output
        --save_features $ap.-save_features
        ## required
        '$fasta'
        'results' ## output
        |& tee log.txt                                      
        ]]></command>
    <inputs>
        <param argument="fasta" type="data" format="fasta" multiple="true" label="Select file with single-molecule reads" help="One file per read."/>

        <section name="ap" title="Advanced parameters">
            <expand macro="batch_size"/>
            <expand macro="regions"/>
            <expand macro="chunk_len"/>
            <expand macro="chunk_ovlp" default="500"/>
            <expand macro="model"/>
            <param argument="--disable_cudnn" type="boolean" truevalue="--disable_cudnn" falsevalue="" label="Disable use of cuDNN model layers?" help=""/>
            <param argument="--depth" type="integer" value="3" label="Set minimum subread count."/>
            <param argument="--length" type="integer" value="400" label="Set minimum median subread length"/>
            <param argument="--check_output" type="boolean" truevalue="--check_output" falsevalue="" label="Should integrity of output file after inference be verified?"/>
            <param argument="--save_features" type="boolean" truevalue="--save_features" falsevalue="" label="Should features with consensus probabilities be saved?"/>
            <param name="out" type="select" multiple="true" optional="false" label="Select output file(s)" help="">
                <option value="result" selected="true">Result</option>
                <option value="log">Log</option>
            </param>
        </section>
    </inputs>
    <outputs>
        <data name="out_log" format="tabular" from_work_dir="log.txt" label="${tool.name} on ${on_string}: Log">
            <filter>'log' in ap['out']</filter>
        </data>
    </outputs>
    <tests>
        <!-- #1 default -->
        <test expect_num_outputs="1">
            <param name="fasta"/>
            <output name="out_log">
                <assert_contents>
                    <has_n_lines n=""/>
                    <has_line line=""/>
                    <has_text_matching expression=""/>
                    <has_size value="" delta=""/>
                </assert_contents>
            </output>            
        </test>
        <!-- #2 -->
        <test expect_num_outputs="2">
            <param name="fasta"/>
            <section name="ap">
                <param name="batch_size" value=""/> 
                <param name="regions" value=""/> 
                <param name="chunk_len" value=""/> 
                <param name="chunk_ovlp" value=""/> 
                <param name="model" value=""/> 
                <param name="disable_cudnn" value=""/>
                <param name="depth" value=""/>
                <param name="length" value=""/>
                <param name="check_output" value=""/>
                <param name="save_features" value=""/>
                <param name="out" value=""/>
            </section>
            <output name="out_log">
                <assert_contents>
                    <has_n_lines n=""/>
                    <has_line line=""/>
                    <has_text_matching expression=""/>
                    <has_size value="" delta=""/>
                </assert_contents>
            </output>
        </test>
    </tests>
    <help><![CDATA[
.. class:: infomark

**What it does**

@WID@

...

**Input**

...

::

    Courier new text

**Output**

...

.. class:: infomark

**References**

@REFERENCES@
    ]]></help>
    <expand macro="citations"/>
</tool>
