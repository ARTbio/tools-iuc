<?xml version="1.0"?>
<tool id="medaka_tool-annotate" name="medaka: Annotate" version="@TOOL_VERSION@+@WRAPPER_VERSION@" profile="@PROFILE@">
    <description>...</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <expand macro="version_command"/>
    <command detect_errors="exit_code"><![CDATA[
        medaka tools annotate
        ## optional
        --debug
        '$ap.pad'
        #if $ap.RG
            --RG '$ap.RG'
        #end if
        ## required
        '$vcf'
        '$ref_fasta'
        '$bam'
        'result.vcf' ## vcfout
        ]]></command>
    <inputs>
        <expand macro="vcf"/>
        <expand macro="ref_fasta"/>
        <expand macro="bam"/>

        <section name="ap" title="Advanced parameters">
            <param argument="--pad" type="integer" value="25" label="Set padding width either side of variant for realignment."/>
            <param argument="--RG" type="text" value="" optional="true" label="Set read group to select."/>
        </section>
    </inputs>
    <outputs>
        <data name="out_result" format="vcf" from_work_dir="result.vcf" label="${tool.name} on ${on_string}: Result"/>
    </outputs>
    <tests>
        <!-- #1 default -->
        <test expect_num_outputs="1">
            <param name="vcf" value="sample.vcf"/>
            <param name="ref_fasta" value="sample.fasta"/>
            <param name="bam" value="sample.bam"/>
            <output name="out_result">
                <assert_contents>
                    <has_n_lines n="209"/>
                    <has_text_matching expression=".+fileformat.+"/>
                    <has_text_matching expression="contig1.+"/>
                </assert_contents>
            </output>
        </test>
        <!-- #2 -->
        <test expect_num_outputs="2">
            <param name="vcf" value="sample.vcf"/>
            <param name="ref_fasta" value="sample.fasta"/>
            <param name="bam" value="sample.bam"/>
            <section name="ap">
                <param name="pad" value="26"/>
                <param name="RG" value=""/>
            </section>
            <output name="out_log">
                <assert_contents>
                    <has_n_lines n="209"/>
                    <has_text_matching expression=".+fileformat.+"/>
                    <has_text_matching expression="contig1.+"/>
                </assert_contents>
            </output>
        </test>
    </tests>
    <help><![CDATA[
.. class:: infomark

**What it does**

@WID@

This module annotates VCF files with read depth and supporting reads info fields.

.. class:: infomark

**References**

@REFERENCES@
    ]]></help>
    <expand macro="citations"/>
</tool>