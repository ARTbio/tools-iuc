<?xml version="1.0"?>
<tool id="medaka_snp" name="medaka: SNP" version="@TOOL_VERSION@+@WRAPPER_VERSION@" profile="@PROFILE@">
    <description>...</description>    
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <expand macro="version_command"/>
    <command detect_errors="exit_code"><![CDATA[
        medaka snp
        ## optional
        --debug
        --regions '$ap.regions'
        --threshold $ap.threshold
        $ap.verbose
        --ref_vcf '$ap.ref_vcf'
        ## required
        '$ref_fasta'
        #for $i, $current in enumerate($inputs)
            '$current'
        #end for
        'result.vcf' ## output
        |& tee log.txt
        ]]></command>
    <inputs>
        <param argument="ref_fasta" type="data" format="fasta" label="Select reference sequence"/>
        <param argument="inputs" type="data" format="hdf" multiple="true" label="Select consensus file(s)"/>

        <section name="ap" title="Advanced parameters">
            <param argument="--regions" type="text" value="" label="Limit variant calling to these reference names"/>
            <param argument="--threshold" type="float" value="0.04" min="0.0" max="1.0" label="Set threshold for considering secondary calls." help="A value of 1 will result in haploid decoding."/>
            <param argument="--ref_vcf" type="data" format="vcf" optional="true" label="Select reference vcf"/>
            <param argument="--verbose" type="boolean" truevalue="--verbose" falsevalue="" label="Should VCF populated into fields?"/>
            <param name="out" type="select" multiple="true" optional="false" label="Select output file(s)" help="">
                <option value="result" selected="true">Result</option>
                <option value="log">Log</option>
            </param>
        </section>
    </inputs>
    <outputs>
        <data name="out_log" format="tabular" from_work_dir="log.txt" label="${tool.name} on ${on_string}: Log">
            <filter>'log' in ap['out']</filter>
        </data>
    </outputs>
    <tests>
        <!-- #1 default -->
        <test expect_num_outputs="1">
            <param name="ref_fasta" value=""/> 
            <param name="inputs" value=""/>          
            <output name="out_log">
                <assert_contents>
                    <has_n_lines n=""/>
                    <has_line line=""/>
                    <has_text_matching expression=""/>
                    <has_size value="" delta=""/>
                </assert_contents>
            </output>            
        </test>
        <!-- #2 -->
        <test expect_num_outputs="1">
            <param name="ref_fasta" value=""/> 
            <param name="inputs" value=""/> 
            <section name="ap">
                <param name="regions" value=""/>
                <param name="threshold" value=""/>
                <param name="ref_vcf" value=""/>
                <param name="verbose" value=""/>
                <param name="out" value=""/>
            </section>                       
            <output name="out_log">
                <assert_contents>
                    <has_n_lines n=""/>
                    <has_line line=""/>
                    <has_text_matching expression=""/>
                    <has_size value="" delta=""/>
                </assert_contents>
            </output>            
        </test>
    </tests>
    <help><![CDATA[
.. class:: infomark

**What it does**

@WID@

...

**Input**

...

::

    Courier new text

**Output**

...

.. class:: infomark

**References**

@REFERENCES@
    ]]></help>
    <expand macro="citations"/>
</tool>