<tool id="odgi_build" name="odgi" version="@VERSION@">
    <description>construct a dynamic succinct variation graph (build)</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <command detect_errors="exit_code"><![CDATA[
odgi build
    -g '$gfa'
    -o '$odgi_output'
    $sort
    #if $to_gfa:
        --to-gfa > '$gfa_output'
    #end if

    ]]></command>
    <inputs>
        <param argument="--gfa" type="data" format="gf1a" label="Construct the graph from this GFA input file" />
        <param argument="--sort" type="boolean" truevalue="--sort" falsevalue="" checked="False"
            label="Topological sort the graph"
            help="Apply generalized topological sort to the graph and set node ids to order." />
        <param argument="--to-gfa" name="to_gfa" type="boolean" truevalue="--to-gfa" falsevalue="" checked="False"
            label="Output additional GFA file"
            help="" />

    </inputs>
    <outputs>
        <data format="odgi" name="odgi_output" />
        <data format="gfa1" name="gfa_output">
            <filter>to_gfa</filter>
        </data>
    </outputs>
    <tests>
        <test>
            <param name="gfa" value="t.gfa" />
            <param name="to_gfa" value="true" />
            <param name="sort" value="true" />
            <output name="odgi_output" file="note5_out.og" ftype="odgi" />
            <output file="note5.gfa" ftype="gfa" name="gfa_output" />
        </test>
    </tests>
    <help><![CDATA[

optimized dynamic genome/graph implemenation (odgi)
---------------------------------------------------

construct a dynamic succinct variation graph (build)


]]></help>
    <expand macro="citations">
    </expand>
</tool>
