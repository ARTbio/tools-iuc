<tool id="slamdunk" name="Analyze SLAMseq data (slamdunk)" version="0.1.0">
    <requirements>
        <requirement type="package" version="0.3.3">slamdunk</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        slamdunk all -r "$input1" -b "$input2" -o "$output1" -rl 100 -mbq 27 -5 0 "$input3"
    ]]></command>
    <inputs>
        <param type="data" name="input1" format="fa" />
        <param type="data" name="input2" format="bed" />
        <param type="data" name="input3" format="fq" />
    </inputs>
    <outputs>
        <data name="output1" format="data" />
    </outputs>
    <tests>
        <test>
            <param name="input1" value="slamdunk/slamdunk/test/data/ref.fa"/>
            <param name="input2" value="slamdunk/slamdunk/test/data/actb.bed"/>
            <param name="input3" value="slamdunk/slamdunk/test/data/reads.fq"/>
            <output name="output1" file="slamdunk/slamdunk/test/data/output"/>
        </test>
    </tests>
    <help><![CDATA[
        /bin/sh: 1: slamdunk: not found

    ]]></help>
