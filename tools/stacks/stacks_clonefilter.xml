<tool id="stacks_clonefilter" name="Stacks: clone filter" version="@WRAPPER_VERSION@.0">
<description>Identify PCR clones</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <expand macro="stdio"/>
    <command><![CDATA[

        #if $data_type.dt_select == "single"

            #if $data_type.single.is_of_type('fastqsanger')
                #set $ext = ".fq"
                #set inputype = "fastq"
            #else
                #set $ext = ".fq.gz"
                #set inputype = "gzfastq"
            #end if

            ln -s '$data_type.single' R1$ext &&
        #else

            #if $data_type.fwd.is_of_type('fastqsanger')
                #set $ext = ".fq"
                #set inputype = "fastq"
            #else
                #set $ext = ".fq.gz"
                #set inputype = "gzfastq"
            #end if

            ln -s '$data_type.fwd' R1$ext &&
            ln -s '$data_type.rev' R2$ext &&
        #end if


        mkdir clone_outputs

        &&

        clone_filter
            #if $data_type.dt_select == 'single':
                -f R1$ext
            #else
               -1 R1$ext
               -2 R2$ext 
            #end if
            -o clone_outputs

    ]]></command>
    <inputs>
        <conditional name="data_type">
            <param name="dt_select" type="select" label="Single or Paired-end">
                <option value="single">Single</option>
                <option value="pair">Pair</option>
            </param>
            <when value="single">
                <param name="fname" type="data" format="fastqsanger,fastqsanger.gz" label="FASTQ" />
            </when>
            <when value="pair">
                <param name="fwd" type="data" format="fastqsanger,fastqsanger.gz" label="Forward FASTQ" />
                <param name="rev" type="data" format="fastqsanger,fastqsanger.gz" label="Reverse FASTQ" />
            </when>
        </conditional>
    </inputs>
    <outputs>
        <data format="fastq" name="clean" from_work_dir="clone_outputs/clean.fq">
            <filter>data_type['dt_select'] == 'single' </filter>
        </data>
        <data format="fastq" name="clean_fwd" from_work_dir="clone_outputs/R1.fq.gz.1.fq">
            <filter>data_type['dt_select'] == 'pair' </filter>
        </data>
        <data format="fastq" name="clean_rev" from_work_dir="clone_outputs/R2.fq.gz.2.fq">
            <filter>data_type['dt_select'] == 'pair' </filter>
        </data>
    </outputs>
    <tests>
        <test>
            <param name="dt_select" value="pair" />
            <param name="fwd" value="clonefilter/R1_0001.1.fq" />
            <param name="rev" value="clonefilter/R2_0001.2.fq" />
            <output name="clean_fwd" file="clonefilter/Removed1_0001.1.1.fq"/>
            <output name="clean_rev" file="clonefilter/Removed2_0001.2.2.fq"/>
        </test>
    </tests>
    <help>
<![CDATA[
.. class:: infomark


The clone_filter program is designed to identify PCR clones.

@STACKS_INFOS@
]]>
    </help>
    <expand macro="citation" />
</tool>
