<tool id="stacks_clonefilter" name="Stacks: clone filter" version="@WRAPPER_VERSION@.0">
<description>Identify PCR clones</description>
    <macros>
        <import>macros.xml</import>
    </macros>
    <expand macro="requirements"/>
    <expand macro="stdio"/>
    <command><![CDATA[
        mkdir clone_outputs
        &&
        clone_filter
            #if $data_type.dt_select == 'single':
                -f '$data_type.fname'
            #else
               -1 '$data_type.fwd'
               -2 '$data_type.rev'
            #end if
            -o clone_outputs

    ]]></command>
    <inputs>
        <conditional name="data_type">
            <param name="dt_select" type="select" label="Single or Paired-end">
                <option value="single">Single</option>
                <option value="pair">Pair</option>
            </param>
            <when value="single">
                <param name="fname" type="data" format="fastq" label="FASTQ" />
            </when>
            <when value="pair">
                <param name="fwd" type="data" format="fastq" label="Forward FASTQ" />
                <param name="rev" type="data" format="fastq" label="Reverse FASTQ" />
            </when>
        </conditional>
    </inputs>
    <outputs>
        <data format="fastq" name="clean" from_work_dir="clone_outputs/clean.fq">
            <filter>data_type['dt_select'] == 'single' </filter>
        </data>
        <data format="fastq" name="clean_fwd" from_work_dir="clone_outputs/dataset_1.dat.1.fq">
            <filter>data_type['dt_select'] == 'pair' </filter>
        </data>
        <data format="fastq" name="clean_rev" from_work_dir="clone_outputs/dataset_2.dat.2.fq">
            <filter>data_type['dt_select'] == 'pair' </filter>
        </data>
    </outputs>
    <tests>
        <test>
            <param name="dt_select" value="pair" />
            <param name="fwd" value="clonefilter/R1_0001.1.fq" />
            <param name="rev" value="clonefilter/R2_0001.2.fq" />
            <output name="clean_fwd" file="clonefilter/Removed1_0001.1.1.fq"/>
            <output name="clean_rev" file="clonefilter/Removed2_0001.2.2.fq"/>
        </test>
    </tests>
    <help>
<![CDATA[
.. class:: infomark


The clone_filter program is designed to identify PCR clones.

@STACKS_INFOS@
]]>
    </help>
    <expand macro="citation" />
</tool>
