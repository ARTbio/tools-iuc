<tool id="pangolin" name="Phylogenetic Assignment of Outbreak Lineages (Pangolin)" version="0.1.0" python_template_version="3.5">
    <requirements>
        <requirement type="package" version="2.3.2">pangolin</requirement>
    </requirements>
    <command detect_errors="exit_code"><![CDATA[
        pangolin 
        $alignment
        $decompress
        --outfile '$output1' 
        --max-ambig $max_ambig
        --min-length $min_length
        '$input1' 
    ]]></command>
    <inputs>
      <param type="data" name="input1" format="fasta" label="Input FASTA File(s)" /> 
      <param name="alignment" type="boolean" label="Generate output alignment" 
          truevalue="--alignment" falsevalue="" help="(--alignment)" /> 
      <param name="decompress" type="boolean" label="Decompress model for greater speed" 
          truevalue="--decompress-model" falsevalue="" help="(--decompress-model)" /> 
      <param name="max_ambig" type="float" label="Maximum proportion of Ns allowed" 
          value="0.5" min="0" max="1" help="(--max-ambig)" />
      <param name="min_length" type="integer" label="Minimum query length allowed" 
          value="10000" min="0" help="(--min-length)" />
    </inputs>
    <outputs>
      <data name="output1" format="csv" />
      <data name="sequences.aln.fasta" format="fasta" />
    </outputs>
    <tests>
      <test>
          <param name="input1" value="test1.fasta"/>
          <output name="output1" file="result1.csv"/>
      </test>
      <test>
          <param name="input1" value="test2.fasta"/>
          <output name="output1" file="result2.csv"/>
      </test>

    </tests>
    <help><![CDATA[
        usage: pangolin <query> [options]

        pangolin: Phylogenetic Assignment of Named Global Outbreak LINeages

        positional arguments:
          query                 Query fasta file of sequences to analyse.

        optional arguments:
          --alignment           Optional alignment output.
          --decompress-model    Permanently decompress the model file to save time
                                running pangolin.
          --max-ambig MAXAMBIG  Maximum proportion of Ns allowed for pangolin to
                                attempt assignment. Default: 0.5
          --min-length MINLEN   Minimum query length allowed for pangolin to attempt
                                assignment. Default: 10000
    ]]></help>
