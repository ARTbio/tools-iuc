<?xml version="1.0"?>
<application id="polydot">
  <metadata>
    <documentation><![CDATA[Draw dotplots for all-against-all comparison of a
                  sequence set]]></documentation>
    <groups><![CDATA[Alignment:Dot plots]]></groups>
    <relations><![CDATA[EDAM_topic:0159 Sequence comparison]]></relations>
    <relations><![CDATA[EDAM_operation:0490 Dotplot plotting]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="seqset" name="sequences">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[any]]></type>
      <help><![CDATA[File containing a sequence alignment]]></help>
      <aligned><![CDATA[N]]></aligned>
      <relations><![CDATA[EDAM_data:0849 Sequence record]]></relations>
    </parameter>
  </section>
  <section id="required">
    <metadata>
      <information><![CDATA[Required section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="integer" name="wordsize">
      <standard><![CDATA[Y]]></standard>
      <default><![CDATA[6]]></default>
      <minimum><![CDATA[2]]></minimum>
      <information><![CDATA[Word size]]></information>
      <relations><![CDATA[EDAM_data:1250 Word size]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="integer" name="gap">
      <default><![CDATA[10]]></default>
      <minimum><![CDATA[0]]></minimum>
      <information><![CDATA[Gap (in residues) between dotplots]]></information>
      <help><![CDATA[This specifies the size of the gap that is used to separate
           the individual dotplots in the display. The size is measured in
           residues, as displayed in the output.]]></help>
      <relations><![CDATA[EDAM_data:1249 Sequence length]]></relations>
    </parameter>
    <parameter type="boolean" name="boxit">
      <default><![CDATA[Y]]></default>
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Draw a box around each dotplot]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="toggle" name="dumpfeat">
      <default><![CDATA[N]]></default>
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Dump all matches as feature files]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="featout" name="outfeat">
      <standard><![CDATA[$(dumpfeat)]]></standard>
      <nullok><![CDATA[@(!$(dumpfeat))]]></nullok>
      <nulldefault><![CDATA[@(!$(dumpfeat))]]></nulldefault>
      <relations><![CDATA[EDAM_data:1255 Feature record]]></relations>
    </parameter>
    <parameter type="graph" name="graph">
      <standard><![CDATA[Y]]></standard>
      <gdesc><![CDATA[Poly dotplot]]></gdesc>
      <relations><![CDATA[EDAM_data:0862 Dotplot]]></relations>
    </parameter>
  </section>
</application>
