<?xml version="1.0"?>
<application id="charge">
  <metadata>
    <documentation><![CDATA[Draw a protein charge plot]]></documentation>
    <groups><![CDATA[Protein:Properties]]></groups>
    <relations><![CDATA[EDAM_topic:0137 Protein hydropathy]]></relations>
    <relations><![CDATA[EDAM_operation:0405 Protein hydrophobic region calculation]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="seqall" name="seqall">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[protein]]></type>
      <relations><![CDATA[EDAM_data:2886 Sequence record (protein)]]></relations>
    </parameter>
    <parameter type="datafile" name="aadata">
      <default><![CDATA[Eamino.dat]]></default>
      <information><![CDATA[Amino acids properties and molecular weight
                  data file]]></information>
      <knowntype><![CDATA[amino acid properties]]></knowntype>
      <relations><![CDATA[EDAM_data:1502 Amino acid index (chemical classes)]]></relations>
    </parameter>
  </section>
  <section id="additional">
    <metadata>
      <information><![CDATA[Additional section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="integer" name="window">
      <additional><![CDATA[Y]]></additional>
      <minimum><![CDATA[1]]></minimum>
      <default><![CDATA[5]]></default>
      <information><![CDATA[Window length]]></information>
      <relations><![CDATA[EDAM_data:1251 Window size]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="toggle" name="plot">
      <default><![CDATA[N]]></default>
      <information><![CDATA[Produce graphic]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="xygraph" name="graph">
      <standard><![CDATA[$(plot)]]></standard>
      <relations><![CDATA[EDAM_data:1523 Protein charge plot]]></relations>
      <sequence><![CDATA[Y]]></sequence>
    </parameter>
    <parameter type="outfile" name="outfile">
      <standard><![CDATA[@(!$(plot))]]></standard>
      <knowntype><![CDATA[charge output]]></knowntype>
      <nullok><![CDATA[Y]]></nullok>
      <nulldefault><![CDATA[$(plot)]]></nulldefault>
      <relations><![CDATA[EDAM_data:1523 Protein charge plot]]></relations>
    </parameter>
  </section>
</application>
