<?xml version="1.0"?>
<application id="dbxreport">
  <metadata>
    <groups><![CDATA[Utils:Database indexing]]></groups>
    <documentation><![CDATA[Validate index and report internals for dbx databases]]></documentation>
    <gui><![CDATA[no]]></gui>
    <batch><![CDATA[no]]></batch>
    <cpu><![CDATA[medium]]></cpu>
    <relations><![CDATA[EDAM_topic:0091 Data handling]]></relations>
    <relations><![CDATA[EDAM_operation:0228 Data index analysis]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="string" name="dbname">
      <parameter><![CDATA[Y]]></parameter>
      <maxlength><![CDATA[19]]></maxlength>
      <minlength><![CDATA[2]]></minlength>
      <information><![CDATA[EMBOSS database name]]></information>
      <knowntype><![CDATA[emboss database name]]></knowntype>
      <pattern><![CDATA[[A-z][A-z0-9_]+]]></pattern>
      <relations><![CDATA[EDAM_identifier:1056 Database name]]></relations>
    </parameter>
    <parameter type="string" name="fields">
      <parameter><![CDATA[y]]></parameter>
      <default><![CDATA[id]]></default>
      <information><![CDATA[Index fields]]></information>
      <knowntype><![CDATA[emboss database field]]></knowntype>
      <help><![CDATA[A list of index fields separated by spaces or commas.]]></help>
      <relations><![CDATA[EDAM_identifier:2219 Database field name]]></relations>
    </parameter>
    <parameter type="directory" name="indexdir">
      <default><![CDATA[]]></default>
      <information><![CDATA[Index directory (optional)]]></information>
      <knowntype><![CDATA[emboss database index]]></knowntype>
      <relations><![CDATA[EDAM_identifier:1049 Directory name]]></relations>
      <nullok><![CDATA[Y]]></nullok>
      <nulldefault><![CDATA[Y]]></nulldefault>
    </parameter>
  </section>
  <section id="required">
    <metadata>
      <information><![CDATA[Required section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
  </section>
  <section id="advanced">
    <metadata>
      <information><![CDATA[Advanced section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="boolean" name="fullreport">
      <information><![CDATA[Write full details to debug file]]></information>
      <default><![CDATA[N]]></default>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="outfile" name="outfile">
      <standard><![CDATA[y]]></standard>
      <name><![CDATA[$(dbname)]]></name>
      <knowntype><![CDATA[dbxreport output]]></knowntype>
      <relations><![CDATA[EDAM_data:2048 Report]]></relations>
    </parameter>
  </section>
</application>
