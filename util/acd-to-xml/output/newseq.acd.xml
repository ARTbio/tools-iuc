<?xml version="1.0"?>
<application id="newseq">
  <metadata>
    <documentation><![CDATA[Create a sequence file from a typed-in sequence]]></documentation>
    <groups><![CDATA[Edit]]></groups>
    <relations><![CDATA[EDAM_topic:0091 Data handling]]></relations>
    <relations><![CDATA[EDAM_operation:0230 Sequence generation]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="string" name="name">
      <parameter><![CDATA[Y]]></parameter>
      <information><![CDATA[Name of the sequence]]></information>
      <help><![CDATA[The name of of the sequence should be a single word that
           you will use to identify the sequence. It should have no (or few)
           punctuation characters in it.]]></help>
      <knowntype><![CDATA[name]]></knowntype>
      <relations><![CDATA[EDAM_identifier:2154 Sequence name]]></relations>
    </parameter>
    <parameter type="string" name="description">
      <parameter><![CDATA[Y]]></parameter>
      <information><![CDATA[Description of the sequence]]></information>
      <help><![CDATA[Enter any description of the sequence that you require.]]></help>
      <knowntype><![CDATA[string]]></knowntype>
      <relations><![CDATA[EDAM_data:2048 Report]]></relations>
    </parameter>
    <parameter type="list" name="type">
      <parameter><![CDATA[Y]]></parameter>
      <minimum><![CDATA[1]]></minimum>
      <maximum><![CDATA[1]]></maximum>
      <default><![CDATA[N]]></default>
      <header><![CDATA[Type of sequence]]></header>
      <values><![CDATA[N:Nucleic, P:Protein]]></values>
      <delimiter><![CDATA[,]]></delimiter>
      <codedelimiter><![CDATA[:]]></codedelimiter>
      <information><![CDATA[Type of sequence]]></information>
      <relations><![CDATA[EDAM_data:1094 Sequence type]]></relations>
    </parameter>
    <parameter type="string" name="sequence">
      <parameter><![CDATA[Y]]></parameter>
      <information><![CDATA[Enter the sequence]]></information>
      <help><![CDATA[The sequence itself. \
           Because of the limitation of the operating system, you will only
           be able to type in a short sequence of (typically) 250 characters,
           or so. \
           The keyboard will beep at you when you have reached this limit and
           you will not be able to press the RETURN/ENTER key until you have
           deleted a few characters.]]></help>
      <knowntype><![CDATA[sequence]]></knowntype>
      <relations><![CDATA[EDAM_data:0848 Raw sequence]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="seqout" name="outseq">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[@(@($(type) == P) ? gapprotein : gapnucleotide)]]></type>
      <relations><![CDATA[EDAM_data:0849 Sequence record]]></relations>
    </parameter>
  </section>
</application>
