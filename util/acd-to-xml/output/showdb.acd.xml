<?xml version="1.0"?>
<application id="showdb">
  <metadata>
    <documentation><![CDATA[Display information on configured databases]]></documentation>
    <groups><![CDATA[Data resources]]></groups>
    <relations><![CDATA[EDAM_topic:0091 Data handling]]></relations>
    <relations><![CDATA[EDAM_operation:0516 Data retrieval (database metadata)]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="string" name="database">
      <default><![CDATA[]]></default>
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Name of a single database to give information
                  on]]></information>
      <knowntype><![CDATA[emboss database name]]></knowntype>
      <relations><![CDATA[EDAM_identifier:1056 Database name]]></relations>
    </parameter>
  </section>
  <section id="additional">
    <metadata>
      <information><![CDATA[Additional section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="boolean" name="html">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[N]]></default>
      <information><![CDATA[Format output as an HTML table]]></information>
      <outputmodifier><![CDATA[Y]]></outputmodifier>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="protein">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Display protein databases]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="nucleic">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Display nucleotide databases]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="sequence">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Display general sequence databases]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="feature">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Display feature annotation databases]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="text">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Display text databases]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="taxonomy">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Display taxonomy databases]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="resource">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Display resource databases]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="assembly">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Display sequence assembly databases]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="obo">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Display obo bio-ontology databases]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="xml">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Display XML databases]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="standard">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Display standard databases]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="user">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Display user-defined databases]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="include">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Display databases defined in included files]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="full">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[N]]></default>
      <information><![CDATA[Display all columns]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="access">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[$(full)]]></default>
      <information><![CDATA[Display 'id, qry, all' access column]]></information>
      <help><![CDATA[This displays the levels of access that can be used on this
           database]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="methods">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[$(full)]]></default>
      <information><![CDATA[Display 'methods' column]]></information>
      <help><![CDATA[This displays the access methods that can be used on this
           database, for all, query or ID access]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="taxscope">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[$(full)]]></default>
      <information><![CDATA[Display 'taxon' column]]></information>
      <help><![CDATA[This displays the taxons covered by this database]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="fields">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[$(full)]]></default>
      <information><![CDATA[Display 'fields' column]]></information>
      <help><![CDATA[This displays the search fields that can be used on this
           database, including the standard 'id' or 'acc' fields]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="numfields">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[$(full)]]></default>
      <information><![CDATA[Display count in 'fields' column]]></information>
      <help><![CDATA[This displays the number of search fields that can be used on this
           database, including the standard 'id' or 'acc' fields]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="aliases">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[$(full)]]></default>
      <information><![CDATA[Display 'alias' column]]></information>
      <help><![CDATA[This displays the alias names that can be used for this
           database]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="numaliases">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[$(full)]]></default>
      <information><![CDATA[Display count in 'alias' column]]></information>
      <help><![CDATA[This displays the number of alias names that can be used for this
           database]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="examples">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[$(full)]]></default>
      <information><![CDATA[Display 'example queries' column]]></information>
      <help><![CDATA[This displays the example queries that can be used to test this
           database]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="numexamples">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[$(full)]]></default>
      <information><![CDATA[Display count in 'example queries' column]]></information>
      <help><![CDATA[This displays the number of example queries that can be used
           to test this database]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="defined">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[$(full)]]></default>
      <information><![CDATA[Display 'defined' column]]></information>
      <help><![CDATA[This displays a short name for the file containing the
           database definition]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="release">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[$(full)]]></default>
      <information><![CDATA[Display 'release' column]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
  </section>
  <section id="advanced">
    <metadata>
      <information><![CDATA[Advanced section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="toggle" name="only">
      <default><![CDATA[N]]></default>
      <information><![CDATA[Display the specified columns]]></information>
      <help><![CDATA[This is a way of shortening the command line if you only
           want a few standard columns to be displayed. Instead of
           specifying: \
           '-nohead -notype -noid -noquery -noall' \
           to get only the comment output, you can specify \
           '-only -comment']]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="heading">
      <default><![CDATA[@(!$(only))]]></default>
      <information><![CDATA[Display column headings]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="type">
      <default><![CDATA[@(!$(only))]]></default>
      <information><![CDATA[Display 'type' column]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="id">
      <default><![CDATA[@(!$(only))]]></default>
      <information><![CDATA[Display 'id' access column]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="query">
      <default><![CDATA[@(!$(only))]]></default>
      <information><![CDATA[Display 'qry' access column]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="all">
      <default><![CDATA[@(!$(only))]]></default>
      <information><![CDATA[Display 'all' access column]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="comment">
      <default><![CDATA[@(!$(only))]]></default>
      <information><![CDATA[Display 'comment' column]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="outfile" name="outfile">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[stdout]]></default>
      <knowntype><![CDATA[showdb output]]></knowntype>
      <relations><![CDATA[EDAM_data:0957 Database metadata]]></relations>
    </parameter>
  </section>
</application>
