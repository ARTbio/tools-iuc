<?xml version="1.0"?>
<application id="restover">
  <metadata>
    <documentation><![CDATA[Find restriction enzymes producing a specific overhang]]></documentation>
    <groups><![CDATA[Nucleic:Restriction]]></groups>
    <relations><![CDATA[EDAM_topic:0100 Nucleic acid restriction]]></relations>
    <relations><![CDATA[EDAM_operation:0431 Restriction site recognition]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="seqall" name="sequence">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[DNA]]></type>
      <relations><![CDATA[EDAM_data:2887 Sequence record (nucleic acid)]]></relations>
    </parameter>
    <parameter type="datafile" name="datafile">
      <default><![CDATA[]]></default>
      <information><![CDATA[Restriction enzyme data file (optional)]]></information>
      <knowntype><![CDATA[restriction enzyme data]]></knowntype>
      <nullok><![CDATA[Y]]></nullok>
      <relations><![CDATA[EDAM_data:1517 Restriction enzyme property]]></relations>
    </parameter>
    <parameter type="datafile" name="mfile">
      <default><![CDATA[Emethylsites.dat]]></default>
      <information><![CDATA[Restriction enzyme methylation data file]]></information>
      <knowntype><![CDATA[restriction enzyme methylation data]]></knowntype>
      <relations><![CDATA[EDAM_data:1517 Restriction enzyme property]]></relations>
    </parameter>
  </section>
  <section id="required">
    <metadata>
      <information><![CDATA[Required section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="string" name="seqcomp">
      <parameter><![CDATA[Y]]></parameter>
      <information><![CDATA[Overlap sequence]]></information>
      <knowntype><![CDATA[nucleotide sequence]]></knowntype>
      <relations><![CDATA[EDAM_format:1210 pure nucleotide]]></relations>
    </parameter>
  </section>
  <section id="advanced">
    <metadata>
      <information><![CDATA[Advanced section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="integer" name="min">
      <minimum><![CDATA[1]]></minimum>
      <maximum><![CDATA[1000]]></maximum>
      <default><![CDATA[1]]></default>
      <information><![CDATA[Minimum cuts per RE]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="integer" name="max">
      <minimum><![CDATA[$(min)]]></minimum>
      <default><![CDATA[2000000000]]></default>
      <information><![CDATA[Maximum cuts per RE]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="single">
      <default><![CDATA[N]]></default>
      <information><![CDATA[Force single site only cuts]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="threeprime">
      <default><![CDATA[N]]></default>
      <information><![CDATA[Use 3' overhang e.g. BamHI has CTAG as a 5'
                  overhang, and ApaI has CCGG as 3' overhang.]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="blunt">
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Allow blunt end cutters]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="sticky">
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Allow sticky end cutters]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="ambiguity">
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Allow ambiguous matches]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="plasmid">
      <default><![CDATA[N]]></default>
      <information><![CDATA[Allow circular DNA]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="methylation">
      <default><![CDATA[N]]></default>
      <information><![CDATA[Use methylation data]]></information>
      <help><![CDATA[If this is set then RE recognition sites will not match
           methylated bases.]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="commercial">
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Only enzymes with suppliers]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="boolean" name="html">
      <default><![CDATA[N]]></default>
      <information><![CDATA[Create HTML output]]></information>
      <outputmodifier><![CDATA[Y]]></outputmodifier>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="limit">
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Limits reports to one isoschizomer]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="alphabetic">
      <default><![CDATA[N]]></default>
      <information><![CDATA[Sort output alphabetically]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="fragments">
      <default><![CDATA[N]]></default>
      <information><![CDATA[Show fragment lengths]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="outfile" name="outfile">
      <parameter><![CDATA[Y]]></parameter>
      <knowntype><![CDATA[restover output]]></knowntype>
      <relations><![CDATA[EDAM_data:1305 Nucleic acid features (restriction sites)]]></relations>
    </parameter>
  </section>
</application>
