<?xml version="1.0"?>
<application id="edialign">
  <metadata>
    <documentation><![CDATA[Local multiple alignment of sequences]]></documentation>
    <groups><![CDATA[Alignment:Multiple]]></groups>
    <relations><![CDATA[EDAM_topic:0182 Sequence alignment]]></relations>
    <relations><![CDATA[EDAM_operation:0495 Multiple sequence alignment construction
    	       (local)]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="seqset" name="sequences">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[any]]></type>
      <aligned><![CDATA[N]]></aligned>
      <relations><![CDATA[EDAM_data:0849 Sequence record]]></relations>
    </parameter>
  </section>
  <section id="additional">
    <metadata>
      <information><![CDATA[Additional section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="list" name="nucmode">
      <additional><![CDATA[$(sequences.nucleic)]]></additional>
      <information><![CDATA[Nucleic acid sequence alignment mode]]></information>
      <help><![CDATA[Nucleic acid sequence alignment mode (simple, translated or
           mixed)]]></help>
      <values><![CDATA[n: simple; nt: translation; ma: mixed alignments]]></values>
      <default><![CDATA[n]]></default>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="revcomp">
      <additional><![CDATA[@($(sequences.nucleic) & @($(nucmode) != n))]]></additional>
      <information><![CDATA[Also consider the reverse complement]]></information>
      <default><![CDATA[N]]></default>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="selection" name="overlapw">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Use overlap weights]]></information>
      <help><![CDATA[By default overlap weights are used when Nseq =<35 but you
           can set this to 'yes' or 'no']]></help>
      <values><![CDATA[default (when Nseq =< 35);yes;no]]></values>
      <default><![CDATA[default (when Nseq =< 35)]]></default>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="list" name="linkage">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Clustering method to construct sequence tree]]></information>
      <help><![CDATA[Clustering method to construct sequence tree (UPGMA,
           minimum linkage or maximum linkage)]]></help>
      <values><![CDATA[UPGMA: UPGMA; max: maximum linkage; min: minimum
             linkage]]></values>
      <default><![CDATA[UPGMA]]></default>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="integer" name="maxfragl">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Maximum fragment length]]></information>
      <minimum><![CDATA[0]]></minimum>
      <default><![CDATA[40]]></default>
      <relations><![CDATA[EDAM_data:1249 Sequence length]]></relations>
    </parameter>
    <parameter type="boolean" name="fragmat">
      <additional><![CDATA[@($(sequences.nucleic) & @($(nucmode) != nt))]]></additional>
      <information><![CDATA[Consider only N-fragment pairs that start
                  with two matches]]></information>
      <default><![CDATA[N]]></default>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="integer" name="fragsim">
      <additional><![CDATA[@($(sequences.protein) | @($(nucmode) != n))]]></additional>
      <information><![CDATA[Consider only P-fragment pairs if first amino
                  acid or codon pair has similarity score of at least n]]></information>
      <minimum><![CDATA[0]]></minimum>
      <default><![CDATA[4]]></default>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="itscore">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Use iterative score]]></information>
      <default><![CDATA[N]]></default>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="float" name="threshold">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Threshold for considering diagonal for
                  alignment]]></information>
      <minimum><![CDATA[0.0]]></minimum>
      <default><![CDATA[0.0]]></default>
      <relations><![CDATA[EDAM_data:2146 Threshold]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="boolean" name="mask">
      <information><![CDATA[Replace unaligned characters by stars '*'
                  rather then putting them in lowercase]]></information>
      <default><![CDATA[N]]></default>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="dostars">
      <information><![CDATA[Activate writing of stars instead of numbers]]></information>
      <default><![CDATA[N]]></default>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="integer" name="starnum">
      <information><![CDATA[Put up to n stars '*' instead of digits 0-9
                  to indicate level of conservation]]></information>
      <minimum><![CDATA[0]]></minimum>
      <default><![CDATA[4]]></default>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="outfile" name="outfile">
      <parameter><![CDATA[Y]]></parameter>
      <knowntype><![CDATA[edialign output]]></knowntype>
      <relations><![CDATA[EDAM_data:0863 Sequence alignment]]></relations>
    </parameter>
    <parameter type="seqoutall" name="outseq">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[gapany]]></type>
      <aligned><![CDATA[Y]]></aligned>
      <relations><![CDATA[EDAM_data:0849 Sequence record]]></relations>
    </parameter>
  </section>
</application>
