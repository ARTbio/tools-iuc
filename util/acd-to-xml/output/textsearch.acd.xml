<?xml version="1.0"?>
<application id="textsearch">
  <metadata>
    <documentation><![CDATA[Search the textual description of sequence(s)]]></documentation>
    <groups><![CDATA[Data retrieval:Text data]]></groups>
    <relations><![CDATA[EDAM_topic:0090 Data search and retrieval]]></relations>
    <relations><![CDATA[EDAM_operation:0345 Sequence retrieval (by keyword)]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="seqall" name="sequence">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[gapany]]></type>
      <relations><![CDATA[EDAM_data:0849 Sequence record]]></relations>
    </parameter>
  </section>
  <section id="required">
    <metadata>
      <information><![CDATA[Required section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="string" name="pattern">
      <parameter><![CDATA[Y]]></parameter>
      <information><![CDATA[Enter a pattern to search for]]></information>
      <help><![CDATA[The search pattern is a regular expression. Use a | to
           indicate OR. \
           For example: \
           human|mouse \
           will find text with either 'human' OR 'mouse' in the text]]></help>
      <knowntype><![CDATA[regular expression]]></knowntype>
      <relations><![CDATA[EDAM_data:1352 Regular expression]]></relations>
    </parameter>
  </section>
  <section id="additional">
    <metadata>
      <information><![CDATA[Additional section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="boolean" name="casesensitive">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[N]]></default>
      <information><![CDATA[Do a case-sensitive search]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="boolean" name="html">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[N]]></default>
      <information><![CDATA[Format output as an HTML table]]></information>
      <outputmodifier><![CDATA[Y]]></outputmodifier>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="only">
      <default><![CDATA[N]]></default>
      <information><![CDATA[Display the specified columns]]></information>
      <help><![CDATA[This is a way of shortening the command line if you only
           want a few things to be displayed. Instead of specifying: \
           '-nohead -noname -nousa -noacc -nodesc' \
           to get only the name output, you can specify \
           '-only -name']]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="heading">
      <default><![CDATA[@(!$(only))]]></default>
      <information><![CDATA[Display column headings]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="usa">
      <default><![CDATA[@(!$(only))]]></default>
      <information><![CDATA[Display the USA of the sequence]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="accession">
      <default><![CDATA[@(!$(only))]]></default>
      <information><![CDATA[Display 'accession' column]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="name">
      <default><![CDATA[@(!$(only))]]></default>
      <information><![CDATA[Display 'name' column]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="description">
      <default><![CDATA[@(!$(only))]]></default>
      <information><![CDATA[Display 'description' column]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="outfile" name="outfile">
      <parameter><![CDATA[Y]]></parameter>
      <knowntype><![CDATA[textsearch output]]></knowntype>
      <relations><![CDATA[EDAM_data:0855 Sequence metadata]]></relations>
    </parameter>
  </section>
