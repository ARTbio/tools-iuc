<?xml version="1.0"?>
<application id="cpgreport">
  <metadata>
    <documentation><![CDATA[Identify and report CpG-rich regions in
                  nucleotide sequence(s)]]></documentation>
    <groups><![CDATA[Nucleic:CpG Islands]]></groups>
    <relations><![CDATA[EDAM_topic:0157 Sequence composition analysis]]></relations>
    <relations><![CDATA[EDAM_operation:0430 CpG island and isochore detection]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="seqall" name="sequence">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[DNA]]></type>
      <relations><![CDATA[EDAM_data:2887 Sequence record (nucleic acid)]]></relations>
    </parameter>
  </section>
  <section id="required">
    <metadata>
      <information><![CDATA[Required section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="integer" name="score">
      <standard><![CDATA[Y]]></standard>
      <minimum><![CDATA[1]]></minimum>
      <maximum><![CDATA[200]]></maximum>
      <default><![CDATA[17]]></default>
      <information><![CDATA[CpG score]]></information>
      <help><![CDATA[This sets the score for each CG sequence found. A value of
           17 is more sensitive, but 28 has also been used with some
           success.]]></help>
      <relations><![CDATA[EDAM_data:1772 Score or penalty]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="outfile" name="outfile">
      <parameter><![CDATA[Y]]></parameter>
      <knowntype><![CDATA[cpgreport output]]></knowntype>
      <relations><![CDATA[EDAM_data:1304 Nucleic acid features
                (CpG island and isochore)]]></relations>
    </parameter>
    <parameter type="featout" name="outfeat">
      <parameter><![CDATA[Y]]></parameter>
      <help><![CDATA[File for output features]]></help>
      <type><![CDATA[nucleotide]]></type>
      <relations><![CDATA[EDAM_data:1276 Nucleic acid features]]></relations>
    </parameter>
  </section>
</application>
