<?xml version="1.0"?>
<application id="prettyplot">
  <metadata>
    <documentation><![CDATA[Draw a sequence alignment with pretty formatting]]></documentation>
    <groups><![CDATA[Alignment:Multiple, Display]]></groups>
    <relations><![CDATA[EDAM_topic:0182 Sequence alignment]]></relations>
    <relations><![CDATA[EDAM_topic:0092 Data visualisation]]></relations>
    <relations><![CDATA[EDAM_operation:0562 Sequence alignment reformatting]]></relations>
    <relations><![CDATA[EDAM_operation:0564 Sequence rendering]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="seqset" name="sequences">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[gapany]]></type>
      <aligned><![CDATA[Y]]></aligned>
      <relations><![CDATA[EDAM_data:0863 Sequence alignment]]></relations>
    </parameter>
    <parameter type="matrix" name="matrixfile">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Matrix file]]></information>
      <protein><![CDATA[$(acdprotein)]]></protein>
      <help><![CDATA[This is the scoring matrix file used when comparing
           sequences. By default it is the file 'EBLOSUM62' (for proteins) or
           the file 'EDNAFULL' (for nucleic sequences). These files are
           found in the 'data' directory of the EMBOSS installation.]]></help>
      <relations><![CDATA[EDAM_data:0874 Comparison matrix]]></relations>
    </parameter>
  </section>
  <section id="additional">
    <metadata>
      <information><![CDATA[Additional section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="integer" name="residuesperline">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[50]]></default>
      <information><![CDATA[Number of residues to be displayed on each
                  line]]></information>
      <help><![CDATA[The number of residues to be displayed on each line]]></help>
      <relations><![CDATA[EDAM_data:1249 Sequence length]]></relations>
    </parameter>
    <parameter type="integer" name="blocksperline">
      <additional><![CDATA[Y]]></additional>
      <minimum><![CDATA[1]]></minimum>
      <maximum><![CDATA[$(residuesperline)]]></maximum>
      <failrange><![CDATA[N]]></failrange>
      <trueminimum><![CDATA[Y]]></trueminimum>
      <information><![CDATA[Blocks of residues on each line]]></information>
      <default><![CDATA[1]]></default>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="ccolours">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Colour residues by their consensus value.]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="string" name="cidentity">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Colour to display identical residues (RED)]]></information>
      <default><![CDATA[RED]]></default>
      <knowntype><![CDATA[plot colour]]></knowntype>
      <relations><![CDATA[EDAM_data:2152 Rendering parameter]]></relations>
    </parameter>
    <parameter type="string" name="csimilarity">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Colour to display similar residues (GREEN)]]></information>
      <default><![CDATA[GREEN]]></default>
      <knowntype><![CDATA[plot colour]]></knowntype>
      <relations><![CDATA[EDAM_data:2152 Rendering parameter]]></relations>
    </parameter>
    <parameter type="string" name="cother">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Colour to display other residues (BLACK)]]></information>
      <default><![CDATA[BLACK]]></default>
      <knowntype><![CDATA[plot colour]]></knowntype>
      <relations><![CDATA[EDAM_data:2152 Rendering parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="docolour">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Colour residues by table oily, amide etc.]]></information>
      <default><![CDATA[N]]></default>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="string" name="shade">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Shading]]></information>
      <help><![CDATA[Set to BPLW for normal shading \
           (black, pale, light, white) \
           so for pair = 1.5,1.0,0.5 and shade = BPLW \
           Residues score Colour \
           1.5 or over... BLACK (B) \
           1.0 to 1.5 ... BROWN (P) \
           0.5 to 1.0 ... WHEAT (L) \
           under 0.5 .... WHITE (W) \
           The only four letters allowed are BPLW, in any order.]]></help>
      <default><![CDATA[]]></default>
      <maxlength><![CDATA[4]]></maxlength>
      <minlength><![CDATA[0]]></minlength>
      <knowntype><![CDATA[plot shading]]></knowntype>
      <pattern><![CDATA[^([BPLW]{4})?$]]></pattern>
      <relations><![CDATA[EDAM_data:2152 Rendering parameter]]></relations>
    </parameter>
    <parameter type="array" name="pair">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Values to represent identical similar
                  related]]></information>
      <default><![CDATA[1.5,1.0,0.5]]></default>
      <minimum><![CDATA[0.0]]></minimum>
      <size><![CDATA[3]]></size>
      <sumtest><![CDATA[N]]></sumtest>
      <knowntype><![CDATA[threshold identity similar related]]></knowntype>
      <relations><![CDATA[EDAM_data:2152 Rendering parameter]]></relations>
    </parameter>
    <parameter type="integer" name="identity">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Only match those which are identical in all
                  sequences.]]></information>
      <default><![CDATA[0]]></default>
      <minimum><![CDATA[0]]></minimum>
      <relations><![CDATA[EDAM_data:2152 Rendering parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="doboxes">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Display prettyboxes]]></information>
      <default><![CDATA[Y]]></default>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="boxcol">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Colour the background in the boxes]]></information>
      <default><![CDATA[N]]></default>
      <relations><![CDATA[EDAM_data:2152 Rendering parameter]]></relations>
    </parameter>
    <parameter type="string" name="boxuse">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Colour to be used for background. (GREY)]]></information>
      <default><![CDATA[GREY]]></default>
      <knowntype><![CDATA[plot colour]]></knowntype>
      <relations><![CDATA[EDAM_data:2152 Rendering parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="name">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Display the sequence names]]></information>
      <default><![CDATA[Y]]></default>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="integer" name="maxnamelen">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Margin size for the sequence name.]]></information>
      <default><![CDATA[10]]></default>
      <relations><![CDATA[EDAM_data:2152 Rendering parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="number">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Display the residue number]]></information>
      <default><![CDATA[Y]]></default>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="listoptions">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Display the date and options used]]></information>
      <default><![CDATA[Y]]></default>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="float" name="ratio">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Plurality ratio for a consensus match]]></information>
      <default><![CDATA[0.5]]></default>
      <minimum><![CDATA[0.0]]></minimum>
      <maximum><![CDATA[1.0]]></maximum>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <section id="consensussection">
      <metadata>
        <information><![CDATA[Consensus section]]></information>
        <type><![CDATA[frame]]></type>
      </metadata>
      <parameter type="boolean" name="consensus">
        <additional><![CDATA[Y]]></additional>
        <information><![CDATA[Display the consensus]]></information>
        <default><![CDATA[N]]></default>
        <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
      </parameter>
      <parameter type="boolean" name="collision">
        <additional><![CDATA[Y]]></additional>
        <information><![CDATA[Allow collisions in calculating consensus]]></information>
        <default><![CDATA[Y]]></default>
        <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
      </parameter>
      <parameter type="list" name="alternative">
        <additional><![CDATA[Y]]></additional>
        <information><![CDATA[Use alternative collisions routine]]></information>
        <values><![CDATA[0:Normal collision check. (default); 1:Compares
               identical scores with the max score found. So if any other
               residue matches the identical score then a collision has
               occurred.; 2:If another residue has a greater than or equal to
               matching score and these do not match then a collision has
               occurred.; 3:Checks all those not in the current consensus.If
               any of these give a top score for matching or identical scores
               then a collision has occured.]]></values>
        <help><![CDATA[Values are 0:Normal collision check. (default) \
             1:Compares identical scores with the max score found. So if any
             other residue matches the identical score then a collision has
             occurred. \
             2:If another residue has a greater than or equal to matching
             score and these do not match then a collision has occurred. \
             3:Checks all those not in the current consensus.If any of these
             give a top score for matching or identical scores then a
             collision has occured.]]></help>
        <default><![CDATA[0]]></default>
        <minimum><![CDATA[1]]></minimum>
        <maximum><![CDATA[1]]></maximum>
        <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
      </parameter>
    </section>
    <parameter type="integer" name="showscore">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Print residue scores]]></information>
      <default><![CDATA[-1]]></default>
      <relations><![CDATA[EDAM_data:2152 Rendering parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="portrait">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Set page to Portrait]]></information>
      <default><![CDATA[N]]></default>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="graph" name="graph">
      <standard><![CDATA[Y]]></standard>
      <gdesc><![CDATA[Pretty plot]]></gdesc>
      <relations><![CDATA[EDAM_data:1711 Sequence alignment image]]></relations>
    </parameter>
  </section>
</application>
