<?xml version="1.0"?>
<application id="dan">
  <metadata>
    <documentation><![CDATA[Calculate nucleic acid melting temperature]]></documentation>
    <groups><![CDATA[Nucleic:Properties, Nucleic:Composition]]></groups>
    <relations><![CDATA[EDAM_topic:0094 Nucleic acid thermodynamics]]></relations>
    <relations><![CDATA[EDAM_topic:0157 Sequence composition analysis]]></relations>
    <relations><![CDATA[EDAM_operation:0455 Nucleic acid thermodynamic property calculation]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="seqall" name="sequence">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[DNA]]></type>
      <relations><![CDATA[EDAM_data:2887 Sequence record (nucleic acid)]]></relations>
    </parameter>
  </section>
  <section id="required">
    <metadata>
      <information><![CDATA[Required section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="integer" name="windowsize">
      <standard><![CDATA[Y]]></standard>
      <minimum><![CDATA[1]]></minimum>
      <maximum><![CDATA[100]]></maximum>
      <default><![CDATA[20]]></default>
      <information><![CDATA[Enter window size]]></information>
      <help><![CDATA[The values of melting point and other thermodynamic
           properties of the sequence are determined by taking a short length
           of sequence known as a window and determining the properties of
           the sequence in that window. The window is incrementally moved
           along the sequence with the properties being calculated at each
           new position.]]></help>
      <relations><![CDATA[EDAM_data:1251 Window size]]></relations>
    </parameter>
    <parameter type="integer" name="shiftincrement">
      <standard><![CDATA[Y]]></standard>
      <minimum><![CDATA[1]]></minimum>
      <maximum><![CDATA[$(windowsize)]]></maximum>
      <failrange><![CDATA[N]]></failrange>
      <trueminimum><![CDATA[N]]></trueminimum>
      <default><![CDATA[1]]></default>
      <information><![CDATA[Enter shift increment]]></information>
      <help><![CDATA[This is the amount by which the window is moved at each
           increment in order to find the melting point and other properties
           along the sequence.]]></help>
      <relations><![CDATA[EDAM_data:2141 Window step size]]></relations>
    </parameter>
    <parameter type="float" name="dnaconc">
      <standard><![CDATA[Y]]></standard>
      <minimum><![CDATA[1.]]></minimum>
      <maximum><![CDATA[100000.]]></maximum>
      <default><![CDATA[50.]]></default>
      <information><![CDATA[Enter DNA concentration (nM)]]></information>
      <relations><![CDATA[EDAM_data:2140 Concentration]]></relations>
    </parameter>
    <parameter type="float" name="saltconc">
      <standard><![CDATA[Y]]></standard>
      <minimum><![CDATA[1.]]></minimum>
      <maximum><![CDATA[1000.]]></maximum>
      <default><![CDATA[50.]]></default>
      <information><![CDATA[Enter salt concentration (mM)]]></information>
      <relations><![CDATA[EDAM_data:2140 Concentration]]></relations>
    </parameter>
  </section>
  <section id="additional">
    <metadata>
      <information><![CDATA[Additional section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <section id="productsection">
      <metadata>
        <information><![CDATA[Product options]]></information>
        <type><![CDATA[frame]]></type>
      </metadata>
      <parameter type="toggle" name="product">
        <additional><![CDATA[Y]]></additional>
        <information><![CDATA[Prompt for product values]]></information>
        <help><![CDATA[This prompts for percent formamide, percent of mismatches
             allowed and product length.]]></help>
        <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
      </parameter>
      <parameter type="float" name="formamide">
        <additional><![CDATA[$(product)]]></additional>
        <minimum><![CDATA[0.]]></minimum>
        <maximum><![CDATA[100.]]></maximum>
        <default><![CDATA[0.]]></default>
        <information><![CDATA[Enter percentage of formamide]]></information>
        <help><![CDATA[This specifies the percent formamide to be used in
             calculations (it is ignored unless -product is used).]]></help>
        <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
      </parameter>
      <parameter type="float" name="mismatch">
        <additional><![CDATA[$(product)]]></additional>
        <minimum><![CDATA[0.]]></minimum>
        <maximum><![CDATA[100.]]></maximum>
        <default><![CDATA[0.]]></default>
        <information><![CDATA[Enter percent mismatch]]></information>
        <help><![CDATA[This specifies the percent mismatch to be used in
             calculations (it is ignored unless -product is used).]]></help>
        <relations><![CDATA[EDAM_data:2146 Threshold]]></relations>
      </parameter>
      <parameter type="integer" name="prodlen">
        <additional><![CDATA[$(product)]]></additional>
        <minimum><![CDATA[$(windowsize)]]></minimum>
        <default><![CDATA[$(windowsize)]]></default>
        <information><![CDATA[Enter the product length]]></information>
        <expected><![CDATA[Window size (20)]]></expected>
        <help><![CDATA[This specifies the product length to be used in
             calculations (it is ignored unless -product is used).]]></help>
        <relations><![CDATA[EDAM_data:1249 Sequence length]]></relations>
      </parameter>
    </section>
    <section id="thermosection">
      <metadata>
        <information><![CDATA[Thermodynamic options]]></information>
        <type><![CDATA[frame]]></type>
      </metadata>
      <parameter type="toggle" name="thermo">
        <additional><![CDATA[Y]]></additional>
        <information><![CDATA[Thermodynamic calculations]]></information>
        <help><![CDATA[Output the DeltaG, DeltaH and DeltaS values of the
             sequence windows to the output data file.]]></help>
        <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
      </parameter>
      <parameter type="float" name="temperature">
        <additional><![CDATA[$(thermo)]]></additional>
        <minimum><![CDATA[0.]]></minimum>
        <maximum><![CDATA[100.]]></maximum>
        <default><![CDATA[25.]]></default>
        <information><![CDATA[Enter temperature]]></information>
        <help><![CDATA[If -thermo has been specified then this specifies the
             temperature at which to calculate the DeltaG, DeltaH and DeltaS
             values.]]></help>
        <relations><![CDATA[EDAM_data:2139 Nucleic acid melting temperature]]></relations>
      </parameter>
    </section>
  </section>
  <section id="advanced">
    <metadata>
      <information><![CDATA[Advanced section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="boolean" name="rna">
      <information><![CDATA[Use RNA data values]]></information>
      <help><![CDATA[This specifies that the sequence is an RNA sequence and not
           a DNA sequence.]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="toggle" name="plot">
      <information><![CDATA[Produce a plot]]></information>
      <help><![CDATA[If this is not specified then the file of output data is
           produced, else a plot of the melting point along the sequence is
           produced.]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="float" name="mintemp">
      <standard><![CDATA[$(plot)]]></standard>
      <minimum><![CDATA[0.]]></minimum>
      <maximum><![CDATA[150.]]></maximum>
      <default><![CDATA[55.]]></default>
      <information><![CDATA[Enter minimum temperature]]></information>
      <help><![CDATA[Enter a minimum value for the temperature scale (y-axis) of
           the plot.]]></help>
      <relations><![CDATA[EDAM_data:2139 Nucleic acid melting temperature]]></relations>
    </parameter>
    <parameter type="xygraph" name="graph">
      <standard><![CDATA[$(plot)]]></standard>
      <multiple><![CDATA[1]]></multiple>
      <gdesc><![CDATA[DNA melting plot]]></gdesc>
      <relations><![CDATA[EDAM_data:2968 Image]]></relations>
      <sequence><![CDATA[Y]]></sequence>
    </parameter>
    <parameter type="report" name="outfile">
      <standard><![CDATA[@(!$(plot))]]></standard>
      <help><![CDATA[If a plot is not being produced then data on the melting
           point etc. in each window along the sequence is output to the
           file.]]></help>
      <rformat><![CDATA[seqtable]]></rformat>
      <taglist><![CDATA[float:tm=Tm float:gc=GC float:dg=DeltaG
              float:dh=DeltaH float:ds=DeltaS float:tmprod=TmProd]]></taglist>
      <nullok><![CDATA[$(plot)]]></nullok>
      <nulldefault><![CDATA[$(plot)]]></nulldefault>
      <relations><![CDATA[EDAM_data:1583 Nucleic acid melting profile]]></relations>
    </parameter>
  </section>
</application>
