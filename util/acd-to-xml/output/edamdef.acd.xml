<?xml version="1.0"?>
<application id="edamdef">
  <metadata>
    <documentation><![CDATA[Find EDAM ontology terms by definition]]></documentation>
    <groups><![CDATA[Ontology:EDAM, Data retrieval:Ontology data]]></groups>
    <relations><![CDATA[EDAM_topic:0089 Ontology]]></relations>
    <relations><![CDATA[EDAM_topic:0090 Data search and retrieval]]></relations>
    <relations><![CDATA[EDAM_operation:2422 Data retrieval]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="string" name="query">
      <default><![CDATA[]]></default>
      <parameter><![CDATA[Y]]></parameter>
      <information><![CDATA[Definition word(s) to search for in ontology]]></information>
      <knowntype><![CDATA[keyword]]></knowntype>
      <relations><![CDATA[EDAM_data:0968 Keyword]]></relations>
    </parameter>
  </section>
  <section id="additional">
    <metadata>
      <information><![CDATA[Additional section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="list" name="namespace">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[*]]></default>
      <minimum><![CDATA[1]]></minimum>
      <maximum><![CDATA[7]]></maximum>
      <header><![CDATA[EDAM namespace(s)]]></header>
      <values><![CDATA[data: Data entity;
     	       entity: Biological entity;
               format: Data format;
               identifier: Identifier;
 	       operation: Bioinformatics operation;
               resource: Data resource;
      	       topic: Field of bioinformatics study]]></values>
      <delimiter><![CDATA[;]]></delimiter>
      <codedelimiter><![CDATA[:]]></codedelimiter>
      <information><![CDATA[Return terms in namespace(s)]]></information>
      <help><![CDATA[By default all terms are returned. Searches can be limited
      	    to one or a few namespaces.]]></help>
      <relations><![CDATA[EDAM_data:0967 Ontology concept metadata]]></relations>
    </parameter>
  </section>
  <section id="advanced">
    <metadata>
      <information><![CDATA[Advanced section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="boolean" name="subclasses">
      <default><![CDATA[N]]></default>
      <information><![CDATA[Include subclasses of hits]]></information>
      <help><![CDATA[Extend the query matches to include all terms which are
           specialisations (EDAM sub-classes) of the matched type.]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="obsolete">
      <default><![CDATA[N]]></default>
      <information><![CDATA[Include obsolete terms]]></information>
      <help><![CDATA[The default behaviour is to not use or return obsolete terms.
           This option if set will include all terms.]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="outobo" name="outfile">
      <parameter><![CDATA[Y]]></parameter>
      <name><![CDATA[edamdef]]></name>
      <relations><![CDATA[EDAM_data:2223 Ontology metadata]]></relations>
    </parameter>
  </section>
</application>
