<?xml version="1.0"?>
<application id="megamerger">
  <metadata>
    <documentation><![CDATA[Merge two large overlapping DNA sequences]]></documentation>
    <groups><![CDATA[Alignment:Consensus]]></groups>
    <gui><![CDATA[yes]]></gui>
    <batch><![CDATA[yes]]></batch>
    <cpu><![CDATA[medium]]></cpu>
    <relations><![CDATA[EDAM_topic:0159 Sequence comparison]]></relations>
    <relations><![CDATA[EDAM_operation:0288 Sequence word comparison]]></relations>
    <relations><![CDATA[EDAM_operation:0232 Sequence merging]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="sequence" name="asequence">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[DNA]]></type>
      <relations><![CDATA[EDAM_data:0849 Sequence record]]></relations>
    </parameter>
    <parameter type="sequence" name="bsequence">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[DNA]]></type>
      <relations><![CDATA[EDAM_data:0849 Sequence record]]></relations>
    </parameter>
  </section>
  <section id="required">
    <metadata>
      <information><![CDATA[Required section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="integer" name="wordsize">
      <standard><![CDATA[Y]]></standard>
      <default><![CDATA[20]]></default>
      <minimum><![CDATA[2]]></minimum>
      <information><![CDATA[Word size]]></information>
      <relations><![CDATA[EDAM_data:1250 Word size]]></relations>
    </parameter>
  </section>
  <section id="additional">
    <metadata>
      <information><![CDATA[Additional section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="boolean" name="prefer">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[N]]></default>
      <information><![CDATA[Use the first sequence when there is a
                  mismatch]]></information>
      <help><![CDATA[When a mismatch between the two sequence is discovered, one
           or other of the two sequences must be used to create the merged
           sequence over this mismatch region. The default action is to
           create the merged sequence using the sequence where the mismatch
           is closest to that sequence's centre. If this option is used, then
           the first sequence (seqa) will always be used in preference to
           the other sequence when there is a mismatch.]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="seqout" name="outseq">
      <parameter><![CDATA[Y]]></parameter>
      <extension><![CDATA[merged]]></extension>
      <relations><![CDATA[EDAM_data:0849 Sequence record]]></relations>
    </parameter>
    <parameter type="outfile" name="outfile">
      <parameter><![CDATA[Y]]></parameter>
      <extension><![CDATA[megamerger]]></extension>
      <knowntype><![CDATA[megamerger output]]></knowntype>
      <relations><![CDATA[EDAM_data:1678 Tool log]]></relations>
    </parameter>
  </section>
</application>
