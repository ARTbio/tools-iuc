<?xml version="1.0"?>
<application id="epestfind">
  <metadata>
    <documentation><![CDATA[Find PEST motifs as potential proteolytic
                  cleavage sites]]></documentation>
    <groups><![CDATA[Protein:Motifs]]></groups>
    <relations><![CDATA[EDAM_topic:0158 Sequence motifs]]></relations>
    <relations><![CDATA[EDAM_topic:0767 Protein and peptide identification]]></relations>
    <relations><![CDATA[EDAM_operation:0422 Protein cleavage site prediction]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="sequence" name="sequence">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[protein]]></type>
      <help><![CDATA[Protein sequence USA to be analysed.]]></help>
      <relations><![CDATA[EDAM_data:2886 Sequence record (protein)]]></relations>
    </parameter>
    <parameter type="datafile" name="mwdata">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[Emolwt.dat]]></default>
      <information><![CDATA[Molecular weights data file]]></information>
      <knowntype><![CDATA[molecular weights]]></knowntype>
      <relations><![CDATA[EDAM_data:1505 Amino acid index (molecular weight)]]></relations>
    </parameter>
  </section>
  <section id="required">
    <metadata>
      <information><![CDATA[Required section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="integer" name="window">
      <standard><![CDATA[Y]]></standard>
      <default><![CDATA[10]]></default>
      <help><![CDATA[Minimal distance between positively charged amino acids.]]></help>
      <information><![CDATA[Window length]]></information>
      <maximum><![CDATA[$(sequence.length)]]></maximum>
      <minimum><![CDATA[2]]></minimum>
      <failrange><![CDATA[N]]></failrange>
      <trueminimum><![CDATA[Y]]></trueminimum>
      <relations><![CDATA[EDAM_data:1251 Window size]]></relations>
    </parameter>
    <parameter type="selection" name="order">
      <standard><![CDATA[Y]]></standard>
      <button><![CDATA[Y]]></button>
      <casesensitive><![CDATA[N]]></casesensitive>
      <default><![CDATA[score]]></default>
      <delimiter><![CDATA[,]]></delimiter>
      <header><![CDATA[Sort order of results]]></header>
      <help><![CDATA[Name of the output file which holds the results of the
           analysis. Results may be sorted by length, position and score.]]></help>
      <information><![CDATA[Sort order of results]]></information>
      <maximum><![CDATA[1]]></maximum>
      <minimum><![CDATA[1]]></minimum>
      <values><![CDATA[length, position, score]]></values>
      <relations><![CDATA[EDAM_data:2134 Results sort order]]></relations>
    </parameter>
  </section>
  <section id="additional">
    <metadata>
      <information><![CDATA[Additional section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="float" name="threshold">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[+5.0]]></default>
      <help><![CDATA[Threshold value to discriminate weak from potential PEST
           motifs. Valid PEST motifs are discriminated into 'poor' and
           'potential' motifs depending on this threshold score. By default,
           the default value is set to +5.0 based on experimental data.
           Alterations are not recommended since significance is a matter of
           biology, not mathematics.]]></help>
      <information><![CDATA[Threshold score]]></information>
      <maximum><![CDATA[+55.0]]></maximum>
      <minimum><![CDATA[-55.0]]></minimum>
      <precision><![CDATA[2]]></precision>
      <relations><![CDATA[EDAM_data:2146 Threshold]]></relations>
    </parameter>
  </section>
  <section id="advanced">
    <metadata>
      <information><![CDATA[Advanced section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="boolean" name="mono">
      <default><![CDATA[N]]></default>
      <information><![CDATA[Use monoisotopic weights]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="potential">
      <default><![CDATA[Y]]></default>
      <help><![CDATA[Decide whether potential PEST motifs should be printed.]]></help>
      <information><![CDATA[Display potential PEST motifs]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="poor">
      <default><![CDATA[Y]]></default>
      <help><![CDATA[Decide whether poor PEST motifs should be printed.]]></help>
      <information><![CDATA[Display poor PEST motifs]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="invalid">
      <default><![CDATA[N]]></default>
      <help><![CDATA[Decide whether invalid PEST motifs should be printed.]]></help>
      <information><![CDATA[Display invalid PEST motifs]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="map">
      <default><![CDATA[Y]]></default>
      <help><![CDATA[Decide whether PEST motifs should be mapped to sequence.]]></help>
      <information><![CDATA[Display PEST motifs map]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="outfile" name="outfile">
      <parameter><![CDATA[Y]]></parameter>
      <help><![CDATA[Name of file to which results will be written.]]></help>
      <knowntype><![CDATA[epestfind output]]></knowntype>
      <relations><![CDATA[EDAM_data:1323 Protein features (cleavage sites)]]></relations>
    </parameter>
    <parameter type="xygraph" name="graph">
      <standard><![CDATA[Y]]></standard>
      <multiple><![CDATA[1]]></multiple>
      <relations><![CDATA[EDAM_data:1323 Protein features (cleavage sites)]]></relations>
      <sequence><![CDATA[Y]]></sequence>
    </parameter>
  </section>
</application>
