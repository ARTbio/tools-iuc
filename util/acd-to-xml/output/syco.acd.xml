<?xml version="1.0"?>
<application id="syco">
  <metadata>
    <documentation><![CDATA[Draw synonymous codon usage statistic plot for a
                  nucleotide sequence]]></documentation>
    <groups><![CDATA[Nucleic:Codon usage, Nucleic:Gene finding]]></groups>
    <relations><![CDATA[EDAM_topic:0107 Codon usage analysis]]></relations>
    <relations><![CDATA[EDAM_topic:0109 Gene finding]]></relations>
    <relations><![CDATA[EDAM_operation:0436 Coding region prediction]]></relations>
    <relations><![CDATA[EDAM_operation:0286 Codon usage analysis]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="sequence" name="sequence">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[DNA]]></type>
      <relations><![CDATA[EDAM_data:0849 Sequence record]]></relations>
    </parameter>
    <parameter type="codon" name="cfile">
      <standard><![CDATA[Y]]></standard>
      <help><![CDATA[Codon usage file]]></help>
      <relations><![CDATA[EDAM_data:1597 Codon usage table]]></relations>
    </parameter>
  </section>
  <section id="advanced">
    <metadata>
      <information><![CDATA[Advanced section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="integer" name="window">
      <default><![CDATA[30]]></default>
      <information><![CDATA[Averaging window]]></information>
      <relations><![CDATA[EDAM_data:1251 Window size]]></relations>
    </parameter>
    <parameter type="boolean" name="uncommon">
      <default><![CDATA[N]]></default>
      <information><![CDATA[Show common codon usage]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="float" name="minimum">
      <default><![CDATA[.15]]></default>
      <minimum><![CDATA[0.0]]></minimum>
      <maximum><![CDATA[.99]]></maximum>
      <information><![CDATA[Minimum value for a common codon]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="toggle" name="plot">
      <information><![CDATA[Produce plot]]></information>
      <default><![CDATA[Y]]></default>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="xygraph" name="graph">
      <standard><![CDATA[$(plot)]]></standard>
      <multiple><![CDATA[3]]></multiple>
      <gdesc><![CDATA[Gribskov Codon Plot]]></gdesc>
      <relations><![CDATA[EDAM_data:1600 Codon usage bias plot]]></relations>
      <sequence><![CDATA[Y]]></sequence>
    </parameter>
    <parameter type="outfile" name="outfile">
      <standard><![CDATA[@(!$(plot))]]></standard>
      <knowntype><![CDATA[syco output]]></knowntype>
      <nullok><![CDATA[$(plot)]]></nullok>
      <nulldefault><![CDATA[$(plot)]]></nulldefault>
      <relations><![CDATA[EDAM_data:1600 Codon usage bias plot]]></relations>
    </parameter>
  </section>
</application>
