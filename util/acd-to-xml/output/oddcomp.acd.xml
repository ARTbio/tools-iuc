<?xml version="1.0"?>
<application id="oddcomp">
  <metadata>
    <documentation><![CDATA[Identify proteins with specified sequence word composition]]></documentation>
    <groups><![CDATA[Protein:Composition]]></groups>
    <relations><![CDATA[EDAM_topic:0157 Sequence composition analysis]]></relations>
    <relations><![CDATA[EDAM_operation:0378 Sequence composition calculation
                (protein)]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="seqall" name="sequence">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[Protein]]></type>
      <relations><![CDATA[EDAM_data:2886 Sequence record (protein)]]></relations>
    </parameter>
    <parameter type="infile" name="infile">
      <parameter><![CDATA[Y]]></parameter>
      <information><![CDATA[Program compseq output file]]></information>
      <help><![CDATA[This is a file in the format of the output produced by
           'compseq' that is used to set the minimum frequencies of words in
           this analysis.]]></help>
      <knowntype><![CDATA[compseq output]]></knowntype>
      <relations><![CDATA[EDAM_data:1261 Sequence composition]]></relations>
    </parameter>
  </section>
  <section id="required">
    <metadata>
      <information><![CDATA[Required section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="toggle" name="fullwindow">
      <default><![CDATA[N]]></default>
      <information><![CDATA[Set window size to length of current protein]]></information>
      <help><![CDATA[Set this option on (Y) if you want the window size to be
           set to the length of the current protein. Otherwise, leave this
           option unset, in which case you'll be prompted for a window size
           to use.]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="integer" name="window">
      <standard><![CDATA[@(!$(fullwindow))]]></standard>
      <minimum><![CDATA[10]]></minimum>
      <default><![CDATA[30]]></default>
      <information><![CDATA[Window size to consider (e.g. 30 aa)]]></information>
      <help><![CDATA[This is the size of window in which to count. \
           Thus if you want to count frequencies in a 40 aa stretch you
           should enter 40 here.]]></help>
      <relations><![CDATA[EDAM_data:1251 Window size]]></relations>
    </parameter>
  </section>
  <section id="advanced">
    <metadata>
      <information><![CDATA[Advanced section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="boolean" name="ignorebz">
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Ignore the amino acids B and Z and just count
                  them as 'Other']]></information>
      <help><![CDATA[The amino acid code B represents Asparagine or Aspartic
           acid and the code Z represents Glutamine or Glutamic acid. \
           These are not commonly used codes and you may wish not to count
           words containing them, just noting them in the count of 'Other'
           words.]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="outfile" name="outfile">
      <parameter><![CDATA[Y]]></parameter>
      <extension><![CDATA[oddcomp]]></extension>
      <help><![CDATA[This is the results file.]]></help>
      <knowntype><![CDATA[oddcomp output]]></knowntype>
      <relations><![CDATA[EDAM_data:1111 EMBOSS listfile]]></relations>
    </parameter>
  </section>
</application>
