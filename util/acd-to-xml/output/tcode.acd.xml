<?xml version="1.0"?>
<application id="tcode">
  <metadata>
    <documentation><![CDATA[Identify protein-coding regions using
                  Fickett TESTCODE statistic]]></documentation>
    <groups><![CDATA[Nucleic:Gene finding]]></groups>
    <relations><![CDATA[EDAM_topic:0109 Gene finding]]></relations>
    <relations><![CDATA[EDAM_operation:0436 Coding region prediction]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="seqall" name="sequence">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[dna]]></type>
      <relations><![CDATA[EDAM_data:2887 Sequence record (nucleic acid)]]></relations>
    </parameter>
    <parameter type="datafile" name="datafile">
      <information><![CDATA[Testcode data file]]></information>
      <default><![CDATA[Etcode.dat]]></default>
      <help><![CDATA[The default data file is Etcode.dat and contains coding
           probabilities for each base. The probabilities are for both
           positional and compositional information.]]></help>
      <knowntype><![CDATA[testcode data]]></knowntype>
      <relations><![CDATA[EDAM_data:0914 Codon usage report]]></relations>
    </parameter>
  </section>
  <section id="required">
    <metadata>
      <information><![CDATA[Required section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="integer" name="window">
      <standard><![CDATA[Y]]></standard>
      <default><![CDATA[200]]></default>
      <minimum><![CDATA[200]]></minimum>
      <maximum><![CDATA[$(sequence.length)]]></maximum>
      <failrange><![CDATA[N]]></failrange>
      <trueminimum><![CDATA[N]]></trueminimum>
      <information><![CDATA[Length of sliding window]]></information>
      <help><![CDATA[This is the number of nucleotide bases over which the
           TESTCODE statistic will be performed each time. The window will
           then slide along the sequence, covering the same number of bases
           each time.]]></help>
      <relations><![CDATA[EDAM_data:1251 Window size]]></relations>
    </parameter>
  </section>
  <section id="advanced">
    <metadata>
      <information><![CDATA[Advanced section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="integer" name="step">
      <information><![CDATA[Stepping increment for the window]]></information>
      <default><![CDATA[3]]></default>
      <minimum><![CDATA[1]]></minimum>
      <maximum><![CDATA[@($(sequence.length) - $(window))]]></maximum>
      <failrange><![CDATA[N]]></failrange>
      <trueminimum><![CDATA[Y]]></trueminimum>
      <help><![CDATA[The selected window will, by default, slide along the
           nucleotide sequence by three bases at a time, retaining the frame
           (although the algorithm is not frame sensitive). This may be
           altered to increase or decrease the increment of the slide.]]></help>
      <relations><![CDATA[EDAM_data:2141 Window step size]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="toggle" name="plot">
      <information><![CDATA[Graphical display]]></information>
      <default><![CDATA[N]]></default>
      <help><![CDATA[On selection a graph of the sequence (X axis) plotted
           against the coding score (Y axis) will be displayed. Sequence
           above the green line is coding, that below the red line is
           non-coding.]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="report" name="outfile">
      <standard><![CDATA[@(!$(plot))]]></standard>
      <rformat><![CDATA[table]]></rformat>
      <multiple><![CDATA[Y]]></multiple>
      <precision><![CDATA[3]]></precision>
      <taglist><![CDATA[str:Estimation]]></taglist>
      <nullok><![CDATA[$(plot)]]></nullok>
      <nulldefault><![CDATA[$(plot)]]></nulldefault>
      <relations><![CDATA[EDAM_data:1313 Nucleic acid features (coding sequence)]]></relations>
    </parameter>
    <parameter type="xygraph" name="graph">
      <standard><![CDATA[$(plot)]]></standard>
      <gdesc><![CDATA[Fickett testcode plot]]></gdesc>
      <relations><![CDATA[EDAM_data:2160 Fickett testcode plot]]></relations>
      <sequence><![CDATA[Y]]></sequence>
    </parameter>
  </section>
</application>
