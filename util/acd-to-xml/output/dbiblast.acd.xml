<?xml version="1.0"?>
<application id="dbiblast">
  <metadata>
    <documentation><![CDATA[Index a BLAST database]]></documentation>
    <groups><![CDATA[Utils:Database indexing]]></groups>
    <gui><![CDATA[no]]></gui>
    <batch><![CDATA[yes]]></batch>
    <cpu><![CDATA[medium]]></cpu>
    <relations><![CDATA[EDAM_topic:0091 Data handling]]></relations>
    <relations><![CDATA[EDAM_operation:0227 Data indexing]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="string" name="dbname">
      <parameter><![CDATA[Y]]></parameter>
      <maxlength><![CDATA[19]]></maxlength>
      <minlength><![CDATA[2]]></minlength>
      <information><![CDATA[Database name]]></information>
      <knowntype><![CDATA[emboss database name]]></knowntype>
      <pattern><![CDATA[[A-z][A-z0-9_]+]]></pattern>
      <relations><![CDATA[EDAM_identifier:1056 Database name]]></relations>
    </parameter>
    <parameter type="directory" name="directory">
      <standard><![CDATA[Y]]></standard>
      <default><![CDATA[.]]></default>
      <information><![CDATA[Database directory]]></information>
      <knowntype><![CDATA[emboss database directory]]></knowntype>
      <relations><![CDATA[EDAM_identifier:1049 Directory name]]></relations>
    </parameter>
    <parameter type="string" name="filenames">
      <standard><![CDATA[Y]]></standard>
      <information><![CDATA[Wildcard database filename]]></information>
      <default><![CDATA[$(dbname)]]></default>
      <expected><![CDATA[Database name]]></expected>
      <knowntype><![CDATA[emboss database wildcard filename]]></knowntype>
      <relations><![CDATA[EDAM_identifier:1050 File name]]></relations>
    </parameter>
  </section>
  <section id="required">
    <metadata>
      <information><![CDATA[Required section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="string" name="release">
      <standard><![CDATA[Y]]></standard>
      <default><![CDATA[0.0]]></default>
      <maxlength><![CDATA[9]]></maxlength>
      <information><![CDATA[Release number]]></information>
      <knowntype><![CDATA[emboss database release]]></knowntype>
      <relations><![CDATA[EDAM_data:1670 Database version information]]></relations>
    </parameter>
    <parameter type="string" name="date">
      <standard><![CDATA[Y]]></standard>
      <default><![CDATA[00/00/00]]></default>
      <valid><![CDATA[Date string dd/mm/yy]]></valid>
      <information><![CDATA[Index date]]></information>
      <pattern><![CDATA[^[0-9][0-9]/[0-9][0-9]/[0-9][0-9]$]]></pattern>
      <knowntype><![CDATA[date]]></knowntype>
      <relations><![CDATA[EDAM_data:2156 Date]]></relations>
    </parameter>
    <parameter type="list" name="seqtype">
      <standard><![CDATA[Y]]></standard>
      <information><![CDATA[Sequence type]]></information>
      <values><![CDATA[N:nucleic;P:protein;?:unknown]]></values>
      <maximum><![CDATA[1]]></maximum>
      <minimum><![CDATA[1]]></minimum>
      <default><![CDATA[unknown]]></default>
      <relations><![CDATA[EDAM_data:1094 Sequence type]]></relations>
    </parameter>
    <parameter type="list" name="blastversion">
      <standard><![CDATA[Y]]></standard>
      <information><![CDATA[Blast index version]]></information>
      <values><![CDATA[1:wublast and setdb/pressdb;2:formatdb;0:unknown]]></values>
      <maximum><![CDATA[1]]></maximum>
      <minimum><![CDATA[1]]></minimum>
      <default><![CDATA[unknown]]></default>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
  </section>
  <section id="advanced">
    <metadata>
      <information><![CDATA[Advanced section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="list" name="fields">
      <information><![CDATA[Index fields]]></information>
      <values><![CDATA[acc:acnum accession number index;sv:seqvn sequence
             version and gi number index;des:des description index]]></values>
      <minimum><![CDATA[0]]></minimum>
      <maximum><![CDATA[3]]></maximum>
      <default><![CDATA[acc]]></default>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="string" name="exclude">
      <information><![CDATA[Wildcard filename(s) to exclude]]></information>
      <knowntype><![CDATA[filename wildcard]]></knowntype>
      <relations><![CDATA[EDAM_identifier:1050 File name]]></relations>
    </parameter>
    <parameter type="string" name="sortoptions">
      <default><![CDATA[-T . -k 1,1]]></default>
      <information><![CDATA[Sort option(s)]]></information>
      <help><![CDATA[Sort options, typically '-T .' to use current directory for
           work files and '-k 1,1' to force GNU sort to use the first field]]></help>
      <knowntype><![CDATA[sort utility options]]></knowntype>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="integer" name="maxindex">
      <default><![CDATA[0]]></default>
      <minimum><![CDATA[0]]></minimum>
      <information><![CDATA[Maximum index length]]></information>
      <relations><![CDATA[EDAM_data:1249 Sequence length]]></relations>
    </parameter>
    <parameter type="boolean" name="systemsort">
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Use system sort utility]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="cleanup">
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Clean up temporary files]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="sourcefile">
      <information><![CDATA[Use FASTA source file]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="outfile" name="outfile">
      <standard><![CDATA[Y]]></standard>
      <knowntype><![CDATA[log]]></knowntype>
      <information><![CDATA[General log output file]]></information>
      <relations><![CDATA[EDAM_data:1678 Tool log]]></relations>
    </parameter>
    <parameter type="outdir" name="indexoutdir">
      <default><![CDATA[.]]></default>
      <information><![CDATA[Index file output directory]]></information>
      <knowntype><![CDATA[emboss database index]]></knowntype>
      <relations><![CDATA[EDAM_identifier:1049 Directory name]]></relations>
    </parameter>
  </section>
</application>
