<?xml version="1.0"?>
<application id="wordmatch">
  <metadata>
    <documentation><![CDATA[Find regions of identity (exact matches) of two sequences]]></documentation>
    <groups><![CDATA[Alignment:Local]]></groups>
    <relations><![CDATA[EDAM_topic:0182 Sequence alignment]]></relations>
    <relations><![CDATA[EDAM_operation:0288 Sequence word comparison]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="seqset" name="asequence">
      <parameter><![CDATA[Y]]></parameter>
      <aligned><![CDATA[N]]></aligned>
      <type><![CDATA[any]]></type>
      <relations><![CDATA[EDAM_data:0849 Sequence record]]></relations>
    </parameter>
    <parameter type="seqall" name="bsequence">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[@($(acdprotein) ? stopprotein : nucleotide)]]></type>
      <relations><![CDATA[EDAM_data:0849 Sequence record]]></relations>
    </parameter>
  </section>
  <section id="required">
    <metadata>
      <information><![CDATA[Required section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="integer" name="wordsize">
      <standard><![CDATA[Y]]></standard>
      <default><![CDATA[4]]></default>
      <minimum><![CDATA[2]]></minimum>
      <information><![CDATA[Word size]]></information>
      <relations><![CDATA[EDAM_data:1250 Word size]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="toggle" name="dumpalign">
      <default><![CDATA[Y]]></default>
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Dump matches as alignments]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="align" name="outfile">
      <parameter><![CDATA[Y]]></parameter>
      <nullok><![CDATA[@(!$(dumpalign))]]></nullok>
      <aformat><![CDATA[match]]></aformat>
      <minseqs><![CDATA[2]]></minseqs>
      <relations><![CDATA[EDAM_data:1381 Sequence alignment (pair)]]></relations>
    </parameter>
    <parameter type="outfile" name="logfile">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[wordmatch.log]]></default>
      <knowntype><![CDATA[wordmatch log]]></knowntype>
      <information><![CDATA[Wordmatch log output file]]></information>
      <help><![CDATA[Statistics on distribution of kmers and matches]]></help>
      <relations><![CDATA[EDAM_data:1678 Tool log]]></relations>
    </parameter>
    <parameter type="toggle" name="dumpfeat">
      <default><![CDATA[Y]]></default>
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Dump matches as feature files]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="featout" name="aoutfeat">
      <parameter><![CDATA[Y]]></parameter>
      <nullok><![CDATA[@(!$(dumpfeat))]]></nullok>
      <ofname><![CDATA[$(asequence.name)]]></ofname>
      <offormat><![CDATA[gff]]></offormat>
      <relations><![CDATA[EDAM_data:1255 Feature record]]></relations>
    </parameter>
    <parameter type="featout" name="boutfeat">
      <parameter><![CDATA[Y]]></parameter>
      <ofname><![CDATA[$(bsequence.name)]]></ofname>
      <offormat><![CDATA[gff]]></offormat>
      <nullok><![CDATA[@(!$(dumpfeat))]]></nullok>
      <relations><![CDATA[EDAM_data:1255 Feature record]]></relations>
    </parameter>
  </section>
</application>
