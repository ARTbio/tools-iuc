<?xml version="1.0"?>
<application id="pepwheel">
  <metadata>
    <documentation><![CDATA[Draw a helical wheel diagram for a protein sequence]]></documentation>
    <groups><![CDATA[Display, Protein:2D Structure]]></groups>
    <relations><![CDATA[EDAM_topic:0092 Data visualisation]]></relations>
    <relations><![CDATA[EDAM_topic:0694 Protein secondary structure]]></relations>
    <relations><![CDATA[EDAM_operation:0569 Protein secondary structure rendering]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="sequence" name="sequence">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[Protein]]></type>
      <relations><![CDATA[EDAM_data:0849 Sequence record]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="boolean" name="wheel">
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Plot the wheel]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="integer" name="steps">
      <additional><![CDATA[Y]]></additional>
      <minimum><![CDATA[2]]></minimum>
      <maximum><![CDATA[100]]></maximum>
      <default><![CDATA[18]]></default>
      <information><![CDATA[Number of steps]]></information>
      <help><![CDATA[The number of residues plotted per turn is this value
           divided by the 'turns' value.]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="integer" name="turns">
      <additional><![CDATA[Y]]></additional>
      <minimum><![CDATA[1]]></minimum>
      <maximum><![CDATA[100]]></maximum>
      <default><![CDATA[5]]></default>
      <information><![CDATA[Number of turns]]></information>
      <help><![CDATA[The number of residues plotted per turn is the 'steps'
           value divided by this value.]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="graph" name="graph">
      <standard><![CDATA[Y]]></standard>
      <gdesc><![CDATA[Helical wheel]]></gdesc>
      <gxtitle><![CDATA[$(sequence.name)]]></gxtitle>
      <relations><![CDATA[EDAM_data:2162 Helical wheel]]></relations>
    </parameter>
    <section id="markupsection">
      <metadata>
        <information><![CDATA[Markup section]]></information>
        <type><![CDATA[frame]]></type>
      </metadata>
      <parameter type="toggle" name="amphipathic">
        <information><![CDATA[Prompt for amphipathic residue marking]]></information>
        <help><![CDATA[If this is true then the residues ACFGILMVWY are marked
             as squares and all other residues are unmarked. This overrides
             any other markup that you may have specified using the
             qualifiers '-squares', '-diamonds' and '-octags'.]]></help>
        <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
      </parameter>
      <parameter type="string" name="squares">
        <additional><![CDATA[@(!$(amphipathic))]]></additional>
        <default><![CDATA[ILVM]]></default>
        <information><![CDATA[Mark as squares]]></information>
        <help><![CDATA[By default the aliphatic residues ILVM are marked with
             squares.]]></help>
        <knowntype><![CDATA[protein codes]]></knowntype>
        <relations><![CDATA[EDAM_data:2152 Rendering parameter]]></relations>
      </parameter>
      <parameter type="string" name="diamonds">
        <additional><![CDATA[@(!$(amphipathic))]]></additional>
        <default><![CDATA[DENQST]]></default>
        <information><![CDATA[Mark as diamonds]]></information>
        <help><![CDATA[By default the residues DENQST are marked with diamonds.]]></help>
        <knowntype><![CDATA[protein codes]]></knowntype>
        <relations><![CDATA[EDAM_data:2152 Rendering parameter]]></relations>
      </parameter>
      <parameter type="string" name="octags">
        <additional><![CDATA[@(!$(amphipathic))]]></additional>
        <default><![CDATA[HKR]]></default>
        <information><![CDATA[Mark as octagons]]></information>
        <help><![CDATA[By default the positively charged residues HKR are marked
             with octagons.]]></help>
        <knowntype><![CDATA[protein codes]]></knowntype>
        <relations><![CDATA[EDAM_data:2152 Rendering parameter]]></relations>
      </parameter>
    </section>
  </section>
</application>
