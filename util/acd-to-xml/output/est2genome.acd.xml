<?xml version="1.0"?>
<application id="est2genome">
  <metadata>
    <documentation><![CDATA[Align EST sequences to genomic DNA sequence]]></documentation>
    <groups><![CDATA[Alignment:Global]]></groups>
    <gui><![CDATA[yes]]></gui>
    <batch><![CDATA[yes]]></batch>
    <cpu><![CDATA[medium]]></cpu>
    <relations><![CDATA[EDAM_topic:0182 Sequence alignment]]></relations>
    <relations><![CDATA[EDAM_operation:0292 Sequence alignment construction]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="seqall" name="estsequence">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[dna]]></type>
      <information><![CDATA[Spliced EST nucleotide sequence(s)]]></information>
      <knowntype><![CDATA[est sequence]]></knowntype>
      <relations><![CDATA[EDAM_data:2887 Sequence record (nucleic acid)]]></relations>
    </parameter>
    <parameter type="sequence" name="genomesequence">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[dna]]></type>
      <information><![CDATA[Unspliced genomic nucleotide sequence]]></information>
      <knowntype><![CDATA[genomic sequence]]></knowntype>
      <relations><![CDATA[EDAM_data:2887 Sequence record (nucleic acid)]]></relations>
    </parameter>
  </section>
  <section id="additional">
    <metadata>
      <information><![CDATA[Additional section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="integer" name="match">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[1]]></default>
      <information><![CDATA[Score for matching two bases]]></information>
      <relations><![CDATA[EDAM_data:1401 Match reward score]]></relations>
    </parameter>
    <parameter type="integer" name="mismatch">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[1]]></default>
      <information><![CDATA[Cost for mismatching two bases]]></information>
      <relations><![CDATA[EDAM_data:1402 Mismatch penalty score]]></relations>
    </parameter>
    <parameter type="integer" name="gappenalty">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[2]]></default>
      <information><![CDATA[Gap penalty]]></information>
      <help><![CDATA[Cost for deleting a single base in either sequence,
           excluding introns]]></help>
      <relations><![CDATA[EDAM_data:2137 Gap penalty]]></relations>
    </parameter>
    <parameter type="integer" name="intronpenalty">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[40]]></default>
      <information><![CDATA[Intron penalty]]></information>
      <help><![CDATA[Cost for an intron, independent of length.]]></help>
      <relations><![CDATA[EDAM_data:1772 Score or penalty]]></relations>
    </parameter>
    <parameter type="integer" name="splicepenalty">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[20]]></default>
      <information><![CDATA[Splice site penalty]]></information>
      <help><![CDATA[Cost for an intron, independent of length and
           starting/ending on donor-acceptor sites]]></help>
      <relations><![CDATA[EDAM_data:1772 Score or penalty]]></relations>
    </parameter>
    <parameter type="integer" name="minscore">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[30]]></default>
      <information><![CDATA[Minimum accepted score]]></information>
      <help><![CDATA[Exclude alignments with scores below this threshold score.]]></help>
      <relations><![CDATA[EDAM_data:2146 Threshold]]></relations>
    </parameter>
  </section>
  <section id="advanced">
    <metadata>
      <information><![CDATA[Advanced section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="boolean" name="reverse">
      <information><![CDATA[Reverse orientation]]></information>
      <help><![CDATA[Reverse the orientation of the EST sequence]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="usesplice">
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Use donor and acceptor splice sites]]></information>
      <help><![CDATA[Use donor and acceptor splice sites. If you want to ignore
           donor-acceptor sites then set this to be false.]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="list" name="mode">
      <default><![CDATA[both]]></default>
      <information><![CDATA[Comparison mode]]></information>
      <help><![CDATA[This determines the comparison mode. The default value is
           'both', in which case both strands of the est are compared
           assuming a forward gene direction (ie GT/AG splice sites), and the
           best comparison redone assuming a reversed (CT/AC) gene splicing
           direction. The other allowed modes are 'forward', when just the
           forward strand is searched, and 'reverse', ditto for the reverse
           strand.]]></help>
      <values><![CDATA[both:Both strands; forward:Forward strand only;
             reverse:Reverse strand only]]></values>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="best">
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Print out only best alignment]]></information>
      <help><![CDATA[You can print out all comparisons instead of just the best
           one by setting this to be false.]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="float" name="space">
      <default><![CDATA[10.0]]></default>
      <information><![CDATA[Space threshold (in megabytes)]]></information>
      <help><![CDATA[For linear-space recursion. If product of sequence lengths
           divided by 4 exceeds this then a divide-and-conquer strategy is
           used to control the memory requirements. In this way very long
           sequences can be aligned. \
           If you have a machine with plenty of memory you can raise this
           parameter (but do not exceed the machine's physical RAM)]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="integer" name="shuffle">
      <information><![CDATA[Shuffle]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="integer" name="seed">
      <default><![CDATA[20825]]></default>
      <information><![CDATA[Random number seed]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="outfile" name="outfile">
      <parameter><![CDATA[y]]></parameter>
      <knowntype><![CDATA[est2genome output]]></knowntype>
      <relations><![CDATA[EDAM_data:1313 Nucleic acid features (coding sequence)]]></relations>
    </parameter>
    <parameter type="boolean" name="align">
      <information><![CDATA[Show the alignment]]></information>
      <help><![CDATA[Show the alignment. The alignment includes the first and
           last 5 bases of each intron, together with the intron width. The
           direction of splicing is indicated by angle brackets (forward or
           reverse) or ???? (unknown).]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="integer" name="width">
      <default><![CDATA[50]]></default>
      <information><![CDATA[Alignment width]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
  </section>
</application>
