<?xml version="1.0"?>
<application id="dotpath">
  <metadata>
    <documentation><![CDATA[Draw a non-overlapping wordmatch dotplot of two sequences]]></documentation>
    <groups><![CDATA[Alignment:Dot plots]]></groups>
    <gui><![CDATA[yes]]></gui>
    <batch><![CDATA[yes]]></batch>
    <cpu><![CDATA[high]]></cpu>
    <relations><![CDATA[EDAM_topic:0159 Sequence comparison]]></relations>
    <relations><![CDATA[EDAM_operation:0288 Sequence word comparison]]></relations>
    <relations><![CDATA[EDAM_operation:0490 Dotplot plotting]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="sequence" name="asequence">
      <parameter><![CDATA[y]]></parameter>
      <type><![CDATA[any]]></type>
      <relations><![CDATA[EDAM_data:0849 Sequence record]]></relations>
    </parameter>
    <parameter type="sequence" name="bsequence">
      <parameter><![CDATA[y]]></parameter>
      <type><![CDATA[@($(acdprotein) ? stopprotein : nucleotide)]]></type>
      <relations><![CDATA[EDAM_data:0849 Sequence record]]></relations>
    </parameter>
  </section>
  <section id="required">
    <metadata>
      <information><![CDATA[Required section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="integer" name="wordsize">
      <standard><![CDATA[Y]]></standard>
      <default><![CDATA[4]]></default>
      <minimum><![CDATA[2]]></minimum>
      <information><![CDATA[Word size]]></information>
      <relations><![CDATA[EDAM_data:1250 Word size]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="boolean" name="overlaps">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[N]]></default>
      <information><![CDATA[Display the overlapping matches]]></information>
      <help><![CDATA[Displays the overlapping matches (in red) as well as the
           minimal set of non-overlapping matches]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="boxit">
      <default><![CDATA[Y]]></default>
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Draw a box around dotplot]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="graph" name="graph">
      <standard><![CDATA[Y]]></standard>
      <gtitle><![CDATA[Dotpath: $(asequence.usa) vs $(bsequence.usa)]]></gtitle>
      <gxtitle><![CDATA[$(bsequence.name)]]></gxtitle>
      <gytitle><![CDATA[$(asequence.name)]]></gytitle>
      <relations><![CDATA[EDAM_data:0862 Dotplot]]></relations>
    </parameter>
  </section>
</application>
