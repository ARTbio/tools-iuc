<?xml version="1.0"?>
<application id="iep">
  <metadata>
    <documentation><![CDATA[Calculate the isoelectric point of proteins]]></documentation>
    <groups><![CDATA[Protein:Properties, Display]]></groups>
    <relations><![CDATA[EDAM_topic:0137 Protein hydropathy]]></relations>
    <relations><![CDATA[EDAM_operation:0403 Protein isoelectric point calculation]]></relations>
    <relations><![CDATA[EDAM_topic:0092 Data visualisation]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="seqall" name="sequence">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[protein]]></type>
      <relations><![CDATA[EDAM_data:2886 Sequence record (protein)]]></relations>
    </parameter>
    <parameter type="datafile" name="pkdata">
      <information><![CDATA[Amino acid pKa data file]]></information>
      <help><![CDATA[Values of pKa for amino acids]]></help>
      <default><![CDATA[Epk.dat]]></default>
      <knowntype><![CDATA[amino acid pka]]></knowntype>
      <relations><![CDATA[EDAM_data:1529 Protein pKa value]]></relations>
    </parameter>
  </section>
  <section id="additional">
    <metadata>
      <information><![CDATA[Additional section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="integer" name="amino">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Number of N-termini]]></information>
      <default><![CDATA[1]]></default>
      <minimum><![CDATA[0]]></minimum>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="integer" name="carboxyl">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Number of C-termini]]></information>
      <default><![CDATA[1]]></default>
      <minimum><![CDATA[0]]></minimum>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="termini">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Include charge at N and C terminus]]></information>
      <default><![CDATA[Y]]></default>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="integer" name="lysinemodified">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Number of modified lysines]]></information>
      <default><![CDATA[0]]></default>
      <minimum><![CDATA[0]]></minimum>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="integer" name="disulphides">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Number of disulphide bridges]]></information>
      <default><![CDATA[0]]></default>
      <minimum><![CDATA[0]]></minimum>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
  </section>
  <section id="advanced">
    <metadata>
      <information><![CDATA[Advanced section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="float" name="step">
      <information><![CDATA[Step value for pH]]></information>
      <minimum><![CDATA[.01]]></minimum>
      <maximum><![CDATA[1.]]></maximum>
      <default><![CDATA[.5]]></default>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="toggle" name="plot">
      <default><![CDATA[N]]></default>
      <information><![CDATA[Plot charge vs pH]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="toggle" name="report">
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Write results to a file]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="xygraph" name="graph">
      <standard><![CDATA[$(plot)]]></standard>
      <relations><![CDATA[EDAM_data:2165 Protein ionization curve]]></relations>
      <sequence><![CDATA[N]]></sequence>
    </parameter>
    <parameter type="outfile" name="outfile">
      <standard><![CDATA[$(report)]]></standard>
      <knowntype><![CDATA[iep output]]></knowntype>
      <nullok><![CDATA[@(!$(report))]]></nullok>
      <nulldefault><![CDATA[@(!$(report))]]></nulldefault>
      <relations><![CDATA[EDAM_data:1528 Protein isoelectric point]]></relations>
    </parameter>
  </section>
