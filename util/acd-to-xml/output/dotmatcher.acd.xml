<?xml version="1.0"?>
<application id="dotmatcher">
  <metadata>
    <documentation><![CDATA[Draw a threshold dotplot of two sequences]]></documentation>
    <groups><![CDATA[Alignment:Dot plots]]></groups>
    <relations><![CDATA[EDAM_topic:0159 Sequence comparison]]></relations>
    <relations><![CDATA[EDAM_operation:0490 Dotplot plotting]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="sequence" name="asequence">
      <parameter><![CDATA[y]]></parameter>
      <type><![CDATA[any]]></type>
      <relations><![CDATA[EDAM_data:0849 Sequence record]]></relations>
    </parameter>
    <parameter type="sequence" name="bsequence">
      <parameter><![CDATA[y]]></parameter>
      <type><![CDATA[@($(acdprotein) ? stopprotein : nucleotide)]]></type>
      <relations><![CDATA[EDAM_data:0849 Sequence record]]></relations>
    </parameter>
    <parameter type="matrix" name="matrixfile">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Matrix file]]></information>
      <protein><![CDATA[$(acdprotein)]]></protein>
      <help><![CDATA[This is the scoring matrix file used when comparing
           sequences. By default it is the file 'EBLOSUM62' (for proteins) or
           the file 'EDNAFULL' (for nucleic sequences). These files are
           found in the 'data' directory of the EMBOSS installation.]]></help>
      <relations><![CDATA[EDAM_data:0874 Comparison matrix]]></relations>
    </parameter>
  </section>
  <section id="additional">
    <metadata>
      <information><![CDATA[Additional section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="integer" name="windowsize">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Window size over which to test threshold]]></information>
      <default><![CDATA[10]]></default>
      <minimum><![CDATA[3]]></minimum>
      <relations><![CDATA[EDAM_data:1251 Window size]]></relations>
    </parameter>
    <parameter type="integer" name="threshold">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Threshold]]></information>
      <default><![CDATA[23]]></default>
      <minimum><![CDATA[0]]></minimum>
      <relations><![CDATA[EDAM_data:2146 Threshold]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="toggle" name="stretch">
      <default><![CDATA[N]]></default>
      <information><![CDATA[Stretch plot]]></information>
      <help><![CDATA[Display a non-proportional graph]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="graph" name="graph">
      <standard><![CDATA[@(!$(stretch))]]></standard>
      <gtitle><![CDATA[Dotmatcher: $(asequence.usa) vs $(bsequence.usa)]]></gtitle>
      <gxtitle><![CDATA[$(asequence.name)]]></gxtitle>
      <gytitle><![CDATA[$(bsequence.name)]]></gytitle>
      <relations><![CDATA[EDAM_data:0862 Dotplot]]></relations>
      <sequence><![CDATA[Y]]></sequence>
    </parameter>
    <parameter type="xygraph" name="xygraph">
      <standard><![CDATA[$(stretch)]]></standard>
      <gtitle><![CDATA[Dotmatcher: $(asequence.usa) vs $(bsequence.usa)]]></gtitle>
      <gxtitle><![CDATA[$(asequence.name)]]></gxtitle>
      <gytitle><![CDATA[$(bsequence.name)]]></gytitle>
      <relations><![CDATA[EDAM_data:0862 Dotplot]]></relations>
      <sequence><![CDATA[Y]]></sequence>
    </parameter>
  </section>
</application>
