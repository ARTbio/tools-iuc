<?xml version="1.0"?>
<application id="pepwindowall">
  <metadata>
    <documentation><![CDATA[Draw Kyte-Doolittle hydropathy plot for a protein alignment]]></documentation>
    <groups><![CDATA[Protein:Properties]]></groups>
    <relations><![CDATA[EDAM_topic:0137 Protein hydropathy]]></relations>
    <relations><![CDATA[EDAM_operation:0401 Protein hydropathy calculation
                (from sequence)]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="seqset" name="sequences">
      <parameter><![CDATA[Y]]></parameter>
      <help><![CDATA[File containing a sequence alignment]]></help>
      <type><![CDATA[gapprotein]]></type>
      <aligned><![CDATA[Y]]></aligned>
      <relations><![CDATA[EDAM_data:1384 Sequence alignment (protein)]]></relations>
    </parameter>
    <parameter type="datafile" name="datafile">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[AAINDEX entry data file]]></information>
      <directory><![CDATA[AAINDEX]]></directory>
      <default><![CDATA[Enakai.dat]]></default>
      <knowntype><![CDATA[aaindex data]]></knowntype>
      <relations><![CDATA[EDAM_data:1501 Amino acid index]]></relations>
    </parameter>
  </section>
  <section id="additional">
    <metadata>
      <information><![CDATA[Additional section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="integer" name="window">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Window size]]></information>
      <default><![CDATA[19]]></default>
      <minimum><![CDATA[1]]></minimum>
      <maximum><![CDATA[$(sequence.length)]]></maximum>
      <warnrange><![CDATA[N]]></warnrange>
      <failrange><![CDATA[N]]></failrange>
      <trueminimum><![CDATA[N]]></trueminimum>
      <relations><![CDATA[EDAM_data:1251 Window size]]></relations>
    </parameter>
    <parameter type="boolean" name="normalize">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Normalize data values]]></information>
      <default><![CDATA[N]]></default>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="xygraph" name="graph">
      <parameter><![CDATA[Y]]></parameter>
      <multiple><![CDATA[$(sequences.count)]]></multiple>
      <gxtitle><![CDATA[Sequence]]></gxtitle>
      <gytitle><![CDATA[Hydropathy]]></gytitle>
      <gtitle><![CDATA[Kyte-Doolittle Plot]]></gtitle>
      <relations><![CDATA[EDAM_data:1522 Protein sequence hydropathy plot]]></relations>
      <sequence><![CDATA[Y]]></sequence>
    </parameter>
  </section>
</application>
