<?xml version="1.0"?>
<application id="palindrome">
  <metadata>
    <documentation><![CDATA[Find inverted repeats in nucleotide sequence(s)]]></documentation>
    <groups><![CDATA[Nucleic:Repeats]]></groups>
    <relations><![CDATA[EDAM_topic:0157 Sequence composition analysis]]></relations>
    <relations><![CDATA[EDAM_operation:0379 Repeat sequence detection]]></relations>
    <relations><![CDATA[EDAM_operation:0278 RNA secondary structure prediction]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="seqall" name="sequence">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[nucleotide]]></type>
      <relations><![CDATA[EDAM_data:0849 Sequence record]]></relations>
    </parameter>
  </section>
  <section id="required">
    <metadata>
      <information><![CDATA[Required section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="integer" name="minpallen">
      <standard><![CDATA[Y]]></standard>
      <default><![CDATA[10]]></default>
      <minimum><![CDATA[1]]></minimum>
      <maximum><![CDATA[@($(sequence.length)/2)]]></maximum>
      <failrange><![CDATA[N]]></failrange>
      <trueminimum><![CDATA[Y]]></trueminimum>
      <information><![CDATA[Enter minimum length of palindrome]]></information>
      <relations><![CDATA[EDAM_data:1249 Sequence length]]></relations>
    </parameter>
    <parameter type="integer" name="maxpallen">
      <standard><![CDATA[Y]]></standard>
      <default><![CDATA[100]]></default>
      <minimum><![CDATA[$(minpalLen)]]></minimum>
      <maximum><![CDATA[@($(sequence.length)/2)]]></maximum>
      <failrange><![CDATA[N]]></failrange>
      <trueminimum><![CDATA[Y]]></trueminimum>
      <information><![CDATA[Enter maximum length of palindrome]]></information>
      <relations><![CDATA[EDAM_data:1249 Sequence length]]></relations>
    </parameter>
    <parameter type="integer" name="gaplimit">
      <standard><![CDATA[Y]]></standard>
      <default><![CDATA[100]]></default>
      <minimum><![CDATA[0]]></minimum>
      <maximum><![CDATA[$(sequence.length)]]></maximum>
      <failrange><![CDATA[N]]></failrange>
      <trueminimum><![CDATA[Y]]></trueminimum>
      <information><![CDATA[Enter maximum gap between repeated regions]]></information>
      <relations><![CDATA[EDAM_data:1249 Sequence length]]></relations>
    </parameter>
    <parameter type="integer" name="nummismatches">
      <standard><![CDATA[Y]]></standard>
      <default><![CDATA[0]]></default>
      <minimum><![CDATA[0]]></minimum>
      <information><![CDATA[Number of mismatches allowed]]></information>
      <valid><![CDATA[Positive integer]]></valid>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="outfile" name="outfile">
      <parameter><![CDATA[Y]]></parameter>
      <extension><![CDATA[pal]]></extension>
      <knowntype><![CDATA[palindrome output]]></knowntype>
      <relations><![CDATA[EDAM_data:1299 Sequence features (repeats)]]></relations>
    </parameter>
    <parameter type="boolean" name="overlap">
      <standard><![CDATA[Y]]></standard>
      <information><![CDATA[Report overlapping matches]]></information>
      <default><![CDATA[Y]]></default>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
  </section>
</application>
