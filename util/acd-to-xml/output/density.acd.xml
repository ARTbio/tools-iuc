<?xml version="1.0"?>
<application id="density">
  <metadata>
    <documentation><![CDATA[Draw a nucleic acid density plot]]></documentation>
    <groups><![CDATA[Nucleic:Composition]]></groups>
    <relations><![CDATA[EDAM_topic:0157 Sequence composition analysis]]></relations>
    <relations><![CDATA[EDAM_topic:0640 Nucleic acid sequence analysis]]></relations>
    <relations><![CDATA[EDAM_operation:2284 Nucleic acid density plotting]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="seqall" name="seqall">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[dna]]></type>
      <relations><![CDATA[EDAM_data:2887 Sequence record (nucleic acid)]]></relations>
    </parameter>
  </section>
  <section id="additional">
    <metadata>
      <information><![CDATA[Additional section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="integer" name="window">
      <additional><![CDATA[Y]]></additional>
      <minimum><![CDATA[1]]></minimum>
      <default><![CDATA[100]]></default>
      <information><![CDATA[Window length]]></information>
      <relations><![CDATA[EDAM_data:1251 Window size]]></relations>
    </parameter>
    <parameter type="list" name="display">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[none]]></default>
      <minimum><![CDATA[1]]></minimum>
      <maximum><![CDATA[1]]></maximum>
      <values><![CDATA[D:Dual - graphic showing individual bases,Q:Quad - AT vs GC graphic,none:none]]></values>
      <delimiter><![CDATA[,]]></delimiter>
      <codedelimiter><![CDATA[:]]></codedelimiter>
      <header><![CDATA[Graph type]]></header>
      <information><![CDATA[Select graph type]]></information>
      <button><![CDATA[Y]]></button>
      <relations><![CDATA[EDAM_data:2152 Rendering parameter]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <variable name="isdual"><![CDATA[@($(display) == D)]]></variable>
    <parameter type="xygraph" name="graph">
      <standard><![CDATA[@($(display) != none)]]></standard>
      <multiple><![CDATA[@( $(isdual) ? 2 : 4)]]></multiple>
      <nullok><![CDATA[Y]]></nullok>
      <nulldefault><![CDATA[@($(display) == none)]]></nulldefault>
      <relations><![CDATA[EDAM_data:2167 Nucleic acid density plot]]></relations>
      <sequence><![CDATA[Y]]></sequence>
    </parameter>
    <parameter type="report" name="outfile">
      <standard><![CDATA[@($(display) == none)]]></standard>
      <taglist><![CDATA[float:a float:c float:g float:t float:at float:gc]]></taglist>
      <rformat><![CDATA[table]]></rformat>
      <knowntype><![CDATA[density output]]></knowntype>
      <nullok><![CDATA[Y]]></nullok>
      <nulldefault><![CDATA[@($(display) != none)]]></nulldefault>
      <relations><![CDATA[EDAM_data:2167 Nucleic acid density plot]]></relations>
    </parameter>
  </section>
</application>
