<?xml version="1.0"?>
<application id="etandem">
  <metadata>
    <documentation><![CDATA[Find tandem repeats in a nucleotide sequence]]></documentation>
    <groups><![CDATA[Nucleic:Repeats]]></groups>
    <relations><![CDATA[EDAM_topic:0157 Sequence composition analysis]]></relations>
    <relations><![CDATA[EDAM_operation:0379 Repeat sequence detection]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="sequence" name="sequence">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[dna]]></type>
      <relations><![CDATA[EDAM_data:2887 Sequence record (nucleic acid)]]></relations>
    </parameter>
  </section>
  <section id="required">
    <metadata>
      <information><![CDATA[Required section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="integer" name="minrepeat">
      <standard><![CDATA[Y]]></standard>
      <default><![CDATA[10]]></default>
      <minimum><![CDATA[2]]></minimum>
      <information><![CDATA[Minimum repeat size]]></information>
      <valid><![CDATA[Integer, 2 or higher]]></valid>
      <relations><![CDATA[EDAM_data:1249 Sequence length]]></relations>
    </parameter>
    <parameter type="integer" name="maxrepeat">
      <standard><![CDATA[Y]]></standard>
      <default><![CDATA[$(minrepeat)]]></default>
      <minimum><![CDATA[$(minrepeat)]]></minimum>
      <information><![CDATA[Maximum repeat size]]></information>
      <valid><![CDATA[Integer, same as -minrepeat or higher]]></valid>
      <expected><![CDATA[Same as -minrepeat]]></expected>
      <relations><![CDATA[EDAM_data:1249 Sequence length]]></relations>
    </parameter>
  </section>
  <section id="advanced">
    <metadata>
      <information><![CDATA[Advanced section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="integer" name="threshold">
      <default><![CDATA[20]]></default>
      <information><![CDATA[Threshold score]]></information>
      <relations><![CDATA[EDAM_data:2146 Threshold]]></relations>
    </parameter>
    <parameter type="boolean" name="mismatch">
      <information><![CDATA[Allow N as a mismatch]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="uniform">
      <information><![CDATA[Allow uniform consensus]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="report" name="outfile">
      <parameter><![CDATA[Y]]></parameter>
      <rformat><![CDATA[table]]></rformat>
      <taglist><![CDATA[int:rpt_size=Size int:rpt_count=Count
              float:identity=Identity str:consensus=Consensus]]></taglist>
      <rextension><![CDATA[tan]]></rextension>
      <precision><![CDATA[0]]></precision>
      <relations><![CDATA[EDAM_data:1299 Sequence features (repeats)]]></relations>
    </parameter>
    <parameter type="outfile" name="origfile">
      <extension><![CDATA[oldtan]]></extension>
      <nullok><![CDATA[Y]]></nullok>
      <nulldefault><![CDATA[Y]]></nulldefault>
      <knowntype><![CDATA[tandem output]]></knowntype>
      <information><![CDATA[Sanger Centre program tandem output file
                  (optional)]]></information>
      <relations><![CDATA[EDAM_data:1299 Sequence features (repeats)]]></relations>
    </parameter>
  </section>
</application>
