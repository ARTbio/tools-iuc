<?xml version="1.0"?>
<application id="digest">
  <metadata>
    <documentation><![CDATA[Report on protein proteolytic enzyme or
                  reagent cleavage sites]]></documentation>
    <groups><![CDATA[Protein:Motifs]]></groups>
    <relations><![CDATA[EDAM_topic:0141 Protein cleavage sites and proteolysis]]></relations>
    <relations><![CDATA[EDAM_operation:0422 Protein cleavage site prediction]]></relations>
    <obsolete><![CDATA[renamed to pepdigest]]></obsolete>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="seqall" name="seqall">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[Protein]]></type>
      <relations><![CDATA[EDAM_data:0849 Sequence record]]></relations>
    </parameter>
    <parameter type="datafile" name="mwdata">
      <information><![CDATA[Molecular weights data file]]></information>
      <help><![CDATA[Molecular weight data for amino
           acids]]></help>
      <default><![CDATA[Emolwt.dat]]></default>
      <knowntype><![CDATA[molecular weights]]></knowntype>
      <relations><![CDATA[EDAM_data:1505 Amino acid index (molecular weight)]]></relations>
    </parameter>
  </section>
  <section id="required">
    <metadata>
      <information><![CDATA[Required section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="list" name="menu">
      <standard><![CDATA[Y]]></standard>
      <default><![CDATA[1]]></default>
      <minimum><![CDATA[1]]></minimum>
      <maximum><![CDATA[1]]></maximum>
      <values><![CDATA[1: Trypsin,2: Lys-C,3: Arg-C,4:
             Asp-N,5: V8-bicarb,6: V8-phosph,7:
             Chymotrypsin,8: CNBr]]></values>
      <delimiter><![CDATA[,]]></delimiter>
      <codedelimiter><![CDATA[:]]></codedelimiter>
      <header><![CDATA[Enzymes and Reagents]]></header>
      <information><![CDATA[Select number]]></information>
      <button><![CDATA[Y]]></button>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="mono">
      <standard><![CDATA[Y]]></standard>
      <default><![CDATA[N]]></default>
      <information><![CDATA[Use monoisotopic weights]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
  </section>
  <section id="advanced">
    <metadata>
      <information><![CDATA[Advanced section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="boolean" name="unfavoured">
      <information><![CDATA[Allow unfavoured cuts]]></information>
      <help><![CDATA[Trypsin will not normally cut after
           'KR' if they are followed by any of
           'KRIFLP'. Lys-C will not normally cut
           after 'K' if it is followed by 'P'.
           Arg-C will not normally cut after 'R'
           if it is followed by 'P'. V8-bicarb
           will not normally cut after 'E' if it
           is followed by any of 'KREP'.
           V8-phosph will not normally cut after
           'DE' if they are followed by 'P'.
           Chymotrypsin will not normally cut
           after 'FYWLM' if they are followed by
           'P'. Specifying unfavoured shows
           these unfavoured cuts as well as the
           favoured ones.]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="ragging">
      <information><![CDATA[Allow ragging]]></information>
      <help><![CDATA[Allows semi-specific and non-specific
           digestion. This option is
           particularly useful for generating
           lists of peptide sequences for
           protein identification using
           mass-spectrometry.]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="list" name="termini">
      <default><![CDATA[1]]></default>
      <minimum><![CDATA[1]]></minimum>
      <maximum><![CDATA[4]]></maximum>
      <values><![CDATA[1: none,2: nterm,3: cterm,4: nterm
             OR cterm]]></values>
      <delimiter><![CDATA[,]]></delimiter>
      <codedelimiter><![CDATA[:]]></codedelimiter>
      <header><![CDATA[Ragging value]]></header>
      <information><![CDATA[Select number]]></information>
      <button><![CDATA[Y]]></button>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="boolean" name="overlap">
      <information><![CDATA[Show overlapping partials]]></information>
      <help><![CDATA[Used for partial digestion. Shows all
           cuts from favoured cut sites plus
           1..3, 2..4, 3..5 etc but not (e.g.)
           2..5. Overlaps are therefore
           fragments with exactly one potential
           cut site within it.]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="allpartials">
      <information><![CDATA[Show all partials]]></information>
      <help><![CDATA[As for overlap but fragments
           containing more than one potential
           cut site are included.]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="report" name="outfile">
      <parameter><![CDATA[Y]]></parameter>
      <rformat><![CDATA[seqtable]]></rformat>
      <multiple><![CDATA[Y]]></multiple>
      <taglist><![CDATA[float:molwt=Mol_Weight
              str:cterm=Cterm str:nterm=Nterm]]></taglist>
      <relations><![CDATA[EDAM_data:1323 Protein features (cleavage sites)]]></relations>
    </parameter>
  </section>
</application>
