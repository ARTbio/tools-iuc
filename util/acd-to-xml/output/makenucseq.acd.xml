<?xml version="1.0"?>
<application id="makenucseq">
  <metadata>
    <documentation><![CDATA[Create random nucleotide sequences]]></documentation>
    <groups><![CDATA[Edit]]></groups>
    <relations><![CDATA[EDAM_topic:0091 Data handling]]></relations>
    <relations><![CDATA[EDAM_operation:0364 Random sequence generation]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="codon" name="codonfile">
      <standard><![CDATA[Y]]></standard>
      <information><![CDATA[Codon usage file (optional)]]></information>
      <help><![CDATA[Optional codon usage file. Nucleotide sequences will be
           created as triplets matching the frequencies in the file, with the
           end trimmed to be in the correct reading frame.]]></help>
      <nullok><![CDATA[Y]]></nullok>
      <knowntype><![CDATA[codon usage]]></knowntype>
      <relations><![CDATA[EDAM_data:1597 Codon usage table]]></relations>
    </parameter>
  </section>
  <section id="required">
    <metadata>
      <information><![CDATA[Required section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="integer" name="amount">
      <standard><![CDATA[Y]]></standard>
      <default><![CDATA[100]]></default>
      <minimum><![CDATA[1]]></minimum>
      <information><![CDATA[Number of sequences created]]></information>
      <relations><![CDATA[EDAM_data:1694 Number of output entities]]></relations>
    </parameter>
    <parameter type="integer" name="length">
      <standard><![CDATA[Y]]></standard>
      <default><![CDATA[100]]></default>
      <minimum><![CDATA[1]]></minimum>
      <information><![CDATA[Length of each sequence]]></information>
      <relations><![CDATA[EDAM_data:1249 Sequence length]]></relations>
    </parameter>
    <parameter type="toggle" name="useinsert">
      <additional><![CDATA[Y]]></additional>
      <information><![CDATA[Do you want to make an insert]]></information>
      <default><![CDATA[N]]></default>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="string" name="insert">
      <standard><![CDATA[$(useinsert)]]></standard>
      <information><![CDATA[Inserted string]]></information>
      <help><![CDATA[String that is inserted into sequence]]></help>
      <knowntype><![CDATA[sequence]]></knowntype>
      <relations><![CDATA[EDAM_data:0848 Raw sequence]]></relations>
    </parameter>
    <parameter type="integer" name="start">
      <standard><![CDATA[$(useinsert)]]></standard>
      <information><![CDATA[Start point of inserted sequence]]></information>
      <minimum><![CDATA[1]]></minimum>
      <default><![CDATA[1]]></default>
      <relations><![CDATA[EDAM_data:1016 Sequence position]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="seqoutall" name="outseq">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[nucleotide]]></type>
      <name><![CDATA[makeseq]]></name>
      <relations><![CDATA[EDAM_data:0849 Sequence record]]></relations>
      <relations><![CDATA[EDAM_format:1210 pure nucleotide]]></relations>
    </parameter>
  </section>
</application>
