<?xml version="1.0"?>
<application id="pepinfo">
  <metadata>
    <documentation><![CDATA[Plot amino acid properties of a protein sequence in parallel.]]></documentation>
    <groups><![CDATA[Protein:Composition, Protein:Properties, Display]]></groups>
    <relations><![CDATA[EDAM_topic:0123 Protein properties]]></relations>
    <relations><![CDATA[EDAM_topic:0157 Sequence composition analysis]]></relations>
    <relations><![CDATA[EDAM_operation:0250 Protein property calculation]]></relations>
    <relations><![CDATA[EDAM_topic:0092 Data visualisation]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="sequence" name="sequence">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[protein]]></type>
      <relations><![CDATA[EDAM_data:2886 Sequence record (protein)]]></relations>
    </parameter>
    <parameter type="datafile" name="aaproperties">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[Eaa_properties.dat]]></default>
      <information><![CDATA[Amino acid chemical classes data file]]></information>
      <knowntype><![CDATA[amino acid classification]]></knowntype>
      <relations><![CDATA[EDAM_data:1502 Amino acid index (chemical classes)]]></relations>
    </parameter>
    <parameter type="datafile" name="aahydropathy">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[Eaa_hydropathy.dat]]></default>
      <information><![CDATA[Amino acid hydropathy values data file]]></information>
      <knowntype><![CDATA[amino acid hydropathy]]></knowntype>
      <relations><![CDATA[EDAM_data:1506 Amino acid index (hydropathy)]]></relations>
    </parameter>
  </section>
  <section id="additional">
    <metadata>
      <information><![CDATA[Additional section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="integer" name="hwindow">
      <additional><![CDATA[Y]]></additional>
      <default><![CDATA[9]]></default>
      <minimum><![CDATA[1]]></minimum>
      <maximum><![CDATA[$(sequence.length)]]></maximum>
      <failrange><![CDATA[N]]></failrange>
      <trueminimum><![CDATA[Y]]></trueminimum>
      <information><![CDATA[Window size for hydropathy averaging]]></information>
      <relations><![CDATA[EDAM_data:1251 Window size]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="xygraph" name="graph">
      <standard><![CDATA[Y]]></standard>
      <multiple><![CDATA[3]]></multiple>
      <relations><![CDATA[EDAM_data:1522 Protein sequence hydropathy plot]]></relations>
      <sequence><![CDATA[Y]]></sequence>
    </parameter>
    <parameter type="outfile" name="outfile">
      <parameter><![CDATA[Y]]></parameter>
      <knowntype><![CDATA[pepinfo output]]></knowntype>
      <relations><![CDATA[EDAM_data:0897 Protein property]]></relations>
    </parameter>
    <parameter type="boolean" name="generalplot">
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Plot histogram of general properties]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="hydropathyplot">
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Plot graphs of hydropathy]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
  </section>
</application>
