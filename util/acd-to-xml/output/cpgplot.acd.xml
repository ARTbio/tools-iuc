<?xml version="1.0"?>
<application id="cpgplot">
  <metadata>
    <documentation><![CDATA[Identify and plot CpG islands in nucleotide sequence(s)]]></documentation>
    <groups><![CDATA[Nucleic:CpG Islands]]></groups>
    <relations><![CDATA[EDAM_topic:0157 Sequence composition analysis]]></relations>
    <relations><![CDATA[EDAM_operation:0430 CpG island and isochore detection]]></relations>
  </metadata>
  <section id="input">
    <metadata>
      <information><![CDATA[Input section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="seqall" name="sequence">
      <parameter><![CDATA[Y]]></parameter>
      <type><![CDATA[DNA]]></type>
      <relations><![CDATA[EDAM_data:2887 Sequence record (nucleic acid)]]></relations>
    </parameter>
  </section>
  <section id="required">
    <metadata>
      <information><![CDATA[Required section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="integer" name="window">
      <standard><![CDATA[Y]]></standard>
      <minimum><![CDATA[1]]></minimum>
      <failrange><![CDATA[N]]></failrange>
      <trueminimum><![CDATA[Y]]></trueminimum>
      <default><![CDATA[100]]></default>
      <information><![CDATA[Window size]]></information>
      <help><![CDATA[The percentage CG content and the Observed frequency of CG
           is calculated within a window whose size is set by this parameter.
           The window is moved down the sequence and these statistics are
           calculated at each position that the window is moved to.]]></help>
      <relations><![CDATA[EDAM_data:1251 Window size]]></relations>
    </parameter>
    <parameter type="integer" name="minlen">
      <standard><![CDATA[Y]]></standard>
      <minimum><![CDATA[1]]></minimum>
      <failrange><![CDATA[N]]></failrange>
      <trueminimum><![CDATA[N]]></trueminimum>
      <default><![CDATA[200]]></default>
      <information><![CDATA[Minimum length of an island]]></information>
      <help><![CDATA[This sets the minimum length that a CpG island has to be
           before it is reported.]]></help>
      <relations><![CDATA[EDAM_data:1249 Sequence length]]></relations>
    </parameter>
    <parameter type="float" name="minoe">
      <standard><![CDATA[Y]]></standard>
      <minimum><![CDATA[0.]]></minimum>
      <maximum><![CDATA[10.]]></maximum>
      <default><![CDATA[0.6]]></default>
      <information><![CDATA[Minimum observed/expected]]></information>
      <help><![CDATA[This sets the minimum average observed to expected ratio of
           C plus G to CpG in a set of 10 windows that are required before a
           CpG island is reported.]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="float" name="minpc">
      <standard><![CDATA[Y]]></standard>
      <minimum><![CDATA[0.]]></minimum>
      <maximum><![CDATA[100.]]></maximum>
      <default><![CDATA[50.]]></default>
      <information><![CDATA[Minimum percentage]]></information>
      <help><![CDATA[This sets the minimum average percentage of G plus C a set
           of 10 windows that are required before a CpG island is reported.]]></help>
      <relations><![CDATA[EDAM_data:2146 Threshold]]></relations>
    </parameter>
  </section>
  <section id="output">
    <metadata>
      <information><![CDATA[Output section]]></information>
      <type><![CDATA[page]]></type>
    </metadata>
    <parameter type="outfile" name="outfile">
      <parameter><![CDATA[Y]]></parameter>
      <help><![CDATA[This sets the name of the file holding the report of the
           input sequence name, CpG island parameters and the output details
           of any CpG islands that are found.]]></help>
      <knowntype><![CDATA[cpgplot output]]></knowntype>
      <relations><![CDATA[EDAM_data:1304 Nucleic acid features
                (CpG island and isochore)]]></relations>
    </parameter>
    <parameter type="toggle" name="plot">
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Plot CpG island score]]></information>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="xygraph" name="graph">
      <standard><![CDATA[$(plot)]]></standard>
      <multiple><![CDATA[3]]></multiple>
      <relations><![CDATA[EDAM_data:2968 Image]]></relations>
      <sequence><![CDATA[Y]]></sequence>
    </parameter>
    <parameter type="boolean" name="obsexp">
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Show observed/expected threshold line]]></information>
      <help><![CDATA[If this is set to true then the graph of the observed to
           expected ratio of C plus G to CpG within a window is displayed.]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="cg">
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Show CpG rich regions]]></information>
      <help><![CDATA[If this is set to true then the graph of the regions which
           have been determined to be CpG islands is displayed.]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="boolean" name="pc">
      <default><![CDATA[Y]]></default>
      <information><![CDATA[Show percentage line]]></information>
      <help><![CDATA[If this is set to true then the graph of the percentage C
           plus G within a window is displayed.]]></help>
      <relations><![CDATA[EDAM_data:2527 Parameter]]></relations>
    </parameter>
    <parameter type="featout" name="outfeat">
      <parameter><![CDATA[Y]]></parameter>
      <help><![CDATA[File for output features]]></help>
      <type><![CDATA[nucleotide]]></type>
      <relations><![CDATA[EDAM_data:1276 Nucleic acid features]]></relations>
    </parameter>
  </section>
</application>
